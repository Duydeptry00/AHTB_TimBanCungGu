
@{
    ViewData["Title"] = "Premium";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mua Premium</title>
 
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/css/Premium.css?v=1.0")" />
    <style>
        body {
            background: url('../Image/Background/backgrounddangnhap.jpg') no-repeat center center fixed;
            background-size: cover; /* Đảm bảo ảnh nền bao phủ toàn bộ màn hình */
            color: white; /* Màu chữ */
            text-align: center; /* Canh giữa chữ */
        }

        .comparison-table {
            margin: 40px 20px;
            background-color: #222; /* Màu nền của bảng */
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
        }

            .comparison-table h2 {
                text-align: center;
                color: white;
                ; /* Màu đỏ */
            }

            .comparison-table table {
                width: 100%;
                border-collapse: collapse;
                margin-top: 20px;
            }

            .comparison-table th,
            .comparison-table td {
                padding: 10px;
                text-align: center;
                border: 1px solid #444; /* Viền bảng */
                color: #fff; /* Màu chữ */
            }

            .comparison-table th {
                background-color: #c0392b; /* Màu đỏ cho tiêu đề */
            }

            .comparison-table tr:nth-child(even) {
                background-color: #333; /* Màu nền cho hàng chẵn */
            }

            .comparison-table tr:nth-child(odd) {
                background-color: #444; /* Màu nền cho hàng lẻ */
            }

    </style>
</head>
<body>
    <br />
    <div class="hero-section">
        <h1 class="blink">Trải nghiệm Premium</h1>
        <p>Nâng cấp trải nghiệm của bạn với các tính năng độc quyền chỉ dành cho thành viên Premium.</p>
    </div>
    <div class="comparison-table">
        <h2>Bảng So Sánh Tài Khoản</h2>
        <table>
            <thead>
                <tr>
                    <th>Chức Năng</th>
                    <th>Tài Khoản Thường</th>
                    <th>Tài Khoản Premium</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Coi những phim cơ bản</td>
                    <td>Có</td>
                    <td>Có</td>
                </tr>
                <tr>
                    <td>Tìm bạn cùng gu không giới hạn</td>
                    <td>Không</td>
                    <td>Có</td>
                </tr>
                <tr>
                    <td>Không quảng cáo</td>
                    <td>Không</td>
                    <td>Có</td>
                </tr>
                <tr>
                    <td>Hỗ trợ ưu tiên</td>
                    <td>Không</td>
                    <td>Có</td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="card-container">
        <!-- Gói 1 Tháng -->
        <form action="@Url.Action("Premium", "ThanhToan")" method="post">
            <div class="card">
                <h3>Gói 1 Tháng</h3>
                <p>Giá: 100,000 VNĐ/tháng</p>
                <input type="hidden" name="GiaGoi" value="100000" />
                <input type="hidden" name="SoThang" value="1" />
                <button type="submit" name="payment" value="VNPay" class="btn">
                    <i class="fas fa-cart-plus"></i> Mua gói
                </button>
            </div>
        </form>

        <!-- Gói 6 Tháng -->
        <form action="@Url.Action("Premium", "ThanhToan")" method="post">
            <div class="card">
                <h3>Gói 6 Tháng</h3>
                <p>Giá: 500,000 VNĐ/tháng</p>
                <input type="hidden" name="GiaGoi" value="500000" />
                <input type="hidden" name="SoThang" value="6" />
                <button type="submit" name="payment" value="VNPay" class="btn">
                    <i class="fas fa-cart-plus"></i> Mua gói
                </button>
            </div>
        </form>

        <!-- Gói 1 Năm -->
        <form action="@Url.Action("Premium", "ThanhToan")" method="post">
            <div class="card">
                <h3>Gói 1 Năm</h3>
                <p>Giá: 900,000 VNĐ/tháng</p>
                <input type="hidden" name="GiaGoi" value="900000" />
                <input type="hidden" name="SoThang" value="12" />
                <button type="submit" name="payment" value="VNPay" class="btn">
                    <i class="fas fa-cart-plus"></i> Mua gói
                </button>
            </div>
        </form>
    </div>

    <div class="footer-section">
        <h2>Cảm ơn bạn đã chọn gói Premium của chúng tôi!</h2>
        <p>Hãy tận hưởng các tiện ích và trải nghiệm đặc biệt chỉ dành cho thành viên Premium.</p>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.js"></script>
</body>
</html>


