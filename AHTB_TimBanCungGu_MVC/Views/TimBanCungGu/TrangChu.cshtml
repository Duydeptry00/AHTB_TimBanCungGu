
@{
    ViewData["Title"] = "TrangChu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tinder Swipe Page</title>
    <style>
        .main-container {
            display: flex;
            flex-direction: row; /* Sắp xếp các thẻ theo hàng ngang */
            justify-content: center;
            align-items: center; /* Căn theo giữa các thẻ */
            width: 90vw; /* Điều chỉnh để có kích thước tổng thể phù hợp */
            gap: 20px;
        }

        .card-container, .details-container {
            flex: 1; /* Đảm bảo hai thẻ có kích thước bằng nhau */
            max-width: 400px; /* Kích thước tối đa cho mỗi thẻ */
            background-color: #fff;
            border-radius: 15px; /* Thay đổi góc bo tròn để thẻ mềm mại hơn */
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2); /* Thêm bóng đổ để thẻ nổi bật */
            display: flex;
            flex-direction: column;
            transition: transform 0.5s ease, opacity 0.5s ease; /* Thêm hiệu ứng chuyển đổi cho opacity và transform */
        }

        .card-container {
            padding: 10px;
        }

        .card {
            width: 100%;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            align-items: center;
            transition: transform 0.5s ease, opacity 0.5s ease; /* Thêm hiệu ứng chuyển đổi cho opacity và transform */
        }

            .card img {
                width: 100%;
                height: 400px;
                object-fit: cover;
                border-radius: 15px 15px 0 0; /* Thay đổi góc bo tròn để đồng bộ với container */
            }

        .info {
            padding: 15px;
            text-align: center;
        }

            .info h2 {
                font-size: 24px; /* Tăng kích thước tiêu đề */
                margin: 0;
            }

            .info p {
                font-size: 18px; /* Tăng kích thước chữ */
                margin: 5px 0;
            }

        .icons {
            display: flex;
            justify-content: space-around;
            width: 100%;
            padding: 10px;
            border-top: 1px solid #e5e5e5;
        }

            .icons button {
                background: none;
                border: none;
                cursor: pointer;
                outline: none;
            }

            .icons img {
                width: 50px; /* Tăng kích thước biểu tượng */
                height: 50px;
                display: block;
            }

        .details-container {
            padding: 20px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            height: 550px;
            font-size: 18px;
            color: #000; /* Thêm màu chữ đen */
            transition: transform 0.5s ease, opacity 0.5s ease;
        }



            .details-container h2 {
                margin-top: 0;
                font-size: 30px; /* Tăng kích thước tiêu đề */
            }

            .details-container p {
                margin: 15px 0; /* Tăng khoảng cách giữa các đoạn văn */
            }

        .images {
            display: flex;
            justify-content: space-between;
            margin-top: 20px;
        }

            .images img {
                width: 120px; /* Tăng kích thước hình ảnh */
                height: 160px;
                border-radius: 10px; /* Thay đổi góc bo tròn để phù hợp */
                object-fit: cover;
            }

    </style>
</head>
<body>
    <div class="main-container">
        <div class="card-container">
            <div class="card">
                <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/5/5f/Madison_Beer_2019_by_Glenn_Francis_%28cropped%29.jpg/1200px-Madison_Beer_2019_by_Glenn_Francis_%28cropped%29.jpg" alt="Profile Picture">
                <div class="info">
                    <h2>Madison Beer</h2>
                    <p>Cần Thơ</p>
                </div>
                <div class="icons">
                    <button class="dislike">
                        <img src="https://cdn-icons-png.flaticon.com/512/1828/1828778.png" alt="Dislike">
                    </button>
                    <button class="like">
                        <img src="https://cdn-icons-png.flaticon.com/512/833/833472.png" alt="Like">
                    </button>
                </div>
            </div>
        </div>
        <div class="details-container">
            <h2>Thông tin chi tiết</h2>
            <p><strong>Tên:</strong> Madison Beer</p>
            <p><strong>Giới tính:</strong> Nữ</p>
            <p><strong>Ngày sinh:</strong> 01/01/1990</p>
            <p><strong>Gu phim:</strong> Hành động, Lãng mạn</p>
            <div class="images">
                <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/0/0f/Madison_Beer_%40_Grammy_Museum_01_17_2024_%2853835030223%29_%28cropped%29.jpg/1200px-Madison_Beer_%40_Grammy_Museum_01_17_2024_%2853835030223%29_%28cropped%29.jpg" alt="Hobby 1">
                <img src="https://i.pinimg.com/736x/3f/42/60/3f4260d42df039183ae7b58513738eed.jpg" alt="Hobby 2">
                <img src="https://i.redd.it/wa94beg6fos61.jpg" alt="Hobby 3">
            </div>
        </div>
    </div>
    <script src="~/js/trangchutbcg.js"></script>
</body>
</html>

