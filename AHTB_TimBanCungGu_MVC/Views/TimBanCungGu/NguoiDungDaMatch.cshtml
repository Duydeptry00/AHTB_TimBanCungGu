@model List<MatchedUser>

@{
    var matchedUsers = (List<MatchedUser>)ViewData["MatchedUsers"];
}

@if (matchedUsers != null && matchedUsers.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Tên Người Dùng</th>
                <th>Tên Đầy Đủ</th>
                <th>Hành Động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in matchedUsers)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>@user.HoTen</td>
                    <td>
                        <!-- Bạn có thể thêm các hành động như gửi tin nhắn hoặc xem hồ sơ -->
                        <a href="@Url.Action("Chat", "TimBanCungGu", new { receiverUserName = user.UserName })" class="btn btn-primary">Gửi Tin Nhắn</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Không có người dùng nào đã match với bạn.</p>
}
