@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đổi Mật Khẩu</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
    <link href="~/css/DoiMatKhau.css" rel="stylesheet" />
</head>
<body>
    <div class="login-box">
        <h1>Đổi Mật Khẩu</h1>
        <p class="subtitle">Vui lòng nhập mật khẩu mới của bạn</p>

        <form asp-action="DoiMatKhau" method="post">
            <!-- Trường email ẩn để gửi lại email -->
            <input type="hidden" name="email" value="@ViewData["Email"]" />

            <div class="user-box">
                <input type="password" name="newPassword" required="">
                <label>Mật khẩu mới</label>
            </div>
            <div class="user-box">
                <input type="password" name="confirmPassword" required="">
                <label>Xác nhận mật khẩu</label>
            </div>

            <center>
                <a onclick="document.querySelector('form').submit()">
                    Đổi Mật Khẩu
                    <span></span>
                </a>
            </center>

            <div>
                @if (ViewBag.Message != null)
                {
                    <p style="color: green;">@ViewBag.Message</p>
                }
                else if (ViewData.ModelState.ErrorCount > 0)
                {
                    <ul style="color: red;">
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <li>@error.ErrorMessage</li>
                        }
                    </ul>
                }
            </div>
        </form>
    </div>
</body>
</html>