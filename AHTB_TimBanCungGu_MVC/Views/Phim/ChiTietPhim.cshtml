@model AHTB_TimBanCungGu_API.Models.Phim

@{
    ViewData["Title"] = "Chi Tiết Phim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css">
</head>

<style>
    /* Phần chi tiết phim */
    .movie-detail {
        margin-top: 40px;
        display: flex;
        gap: 20px;
        padding: 20px;
        background-color: #222;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    /* Hình ảnh phim */
    .movie-poster {
        width: 100%;
        max-width: 400px;
        border-radius: 8px;
        object-fit: cover;
    }

    /* Thông tin phim */
    .movie-info {
        flex: 1;
        color: #ddd;
    }

        .movie-info h2 {
            font-size: 2rem;
            color: #FF4500;
        }

        .movie-info p {
            font-size: 1rem;
            color: #ccc;
        }

        .movie-info strong {
            color: #FF4500;
        }

    /* Nút Xem Phim và Yêu Thích */
    .btn-container {
        display: flex;
        align-items: center;
        gap: 10px;
        flex-wrap: wrap;
        margin-top: 10px;
    }

    .btn-watch {
        background-color: #dc3545;
        border: none;
        color: white;
        padding: 8px 16px;
        font-size: 14px;
        border-radius: 5px;
        cursor: pointer;
        text-align: center;
        text-decoration: none;
    }

        .btn-watch a {
            color: white;
            text-decoration: none;
        }

        .btn-watch:hover {
            background-color: #b02a37;
        }

    /* Phần phim cùng thể loại */
    .recommended-section {
        margin-top: 40px;
    }

    /* Tạo hiệu ứng khi hover vào thẻ card */
    .card-hover {
        position: relative;
        overflow: hidden;
        transition: transform 0.3s ease-in-out;
        background-color: #343a40;
        color: #f8f9fa;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

        .card-hover img {
            width: 100%;
            height: 350px;
            object-fit: cover;
            transition: filter 0.3s ease-in-out;
        }

        .card-hover:hover img {
            filter: brightness(80%);
        }

        .card-hover:hover {
            transform: scale(1.05);
        }

    .card-body {
        padding: 15px;
        text-align: center;
    }

    .btn-xem-ngay {
        position: absolute;
        transition: opacity 0.3s ease-in-out;
        opacity: 0;
        pointer-events: none;
        display: flex;
        align-items: center;
        justify-content: center;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background-color: #dc3545;
        border: none;
        color: white;
        padding: 12px 24px;
        border-radius: 50px;
        font-size: 16px;
        cursor: pointer;
        text-align: center;
        white-space: nowrap;
    }

        .btn-xem-ngay i {
            font-size: 1em;
            margin-right: 8px;
            vertical-align: middle;
        }

    .card-hover:hover .btn-xem-ngay {
        opacity: 1;
        pointer-events: auto;
    }

    .card-title {
        font-size: 18px;
        font-weight: bold;
        color: #f8f9fa;
    }
</style>

<div class="container">
    <div class="row align-items-center movie-detail">
        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success">
                @TempData["Message"]
            </div>
        }
        <div class="col-md-5 d-flex justify-content-center">
            <img src="/Uploads/@Model.HinhAnh" alt="Áp phích phim" class="img-fluid movie-poster">
        </div>

        <div class="col-md-7 movie-info">
            <h2>@Model.TenPhim</h2>
            <p>
                @if (ViewBag.IsSingleMovie)
                {
                    <h4>@Model.DangPhim</h4>
                }
                else
                {
                    foreach (var phan in ViewBag.DanhSachPhan)
                    {
                        <h4>Phần @phan.SoPhan (@phan.SoLuongTap Tập)</h4>
                    }
                }
                <strong>Diễn Viên:</strong> @Model.DienVien<br>
                <strong>Ngày phát hành:</strong> @Model.NgayPhatHanh.Year<br>
                <strong>Mô tả:</strong> @Model.MoTa<br />
                <strong>Dạng Phim:</strong> <b>@Html.DisplayFor(model => model.TheLoai.TenTheLoai)</b><br />
                <strong>Đánh giá:</strong> <b>@Model.DanhGia / 10</b>
            </p>

            <div class="btn-container">
                @if (ViewBag.IsSingleMovie)
                {
                    <button class="btn-watch" data-phim-id="@Model.IDPhim" onclick="luuLichSuXem(event)">
                        <a href="@Url.Action("XemPhim", "Phim", new { idPhim = ViewBag.PhimLe.IDPhim })">Xem ngay</a>
                    </button>
                }
                else
                {
                    @foreach (var phan in ViewBag.DanhSachPhan)
                    {
                        <button class="btn-watch" data-phim-id="@Model.IDPhim" data-phan-id="@phan.SoPhan" onclick="luuLichSuXem(event)">
                            <a href="@Url.Action("XemPhim", "Phim", new { idPhim = Model.IDPhim, Phan = phan.IDPhan })">Phần @phan.SoPhan</a>
                        </button>
                    }
                }

                <form asp-action="ToggleFavorite" method="post" style="display: inline;">
                    <input type="hidden" name="movieId" value="@Model.IDPhim" />
                    <button type="submit" class="btn-watch">
                        @if (ViewBag.IsFavorite)
                        {
                            <span>Xóa yêu thích</span>
                        }
                        else
                        {
                            <span>Yêu thích</span>
                        }
                    </button>
                </form>
            </div>
        </div>
    </div>

    <div class="recommended-section">
        <h2 style="color:white">Phim cùng thể loại</h2>
        <div class="row">
            @foreach (var phim in ViewBag.PhimDeCu)
            {
                <div class="col-md-3 mb-4">
                    <div class="card-hover">
                        <img src="/Uploads/@phim.HinhAnh" alt="@phim.TenPhim" class="card-img-top">
                        <div class="card-body text-center">
                            <h5 class="card-title">@phim.TenPhim</h5>
                            <button class="btn-xem-ngay">
                                <a href="@Url.Action("ChiTietPhim", "Phim", new { id = phim.IDPhim })" style="text-decoration: none; color: white;">
                                    <i class="bi bi-play-fill"></i> Xem ngay
                                </a>
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>


<script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.min.js"></script>
<script>
    window.onload = function () {
        var alert = document.querySelector('.alert-success');
        if (alert) {
            setTimeout(function () {
                alert.style.display = 'none';
            }, 2000);
        }
    };
    function luuLichSuXem(event) {
        event.preventDefault();  // Ngừng hành động mặc định

        // Tìm button hoặc phần tử gần nhất có data- thuộc tính
        var button = $(event.target).closest('button');
        var phimId = button.data('phim-id');
        var phanId = button.data('phan-id');  // Nếu cần sử dụng phanId

        // Kiểm tra dữ liệu hợp lệ
        if (!phimId) {
            alert('ID phim không hợp lệ!');
            return;
        }

        // Gửi yêu cầu AJAX
        $.ajax({
            url: '/LichSuXem/LuuLichSuXem',
            type: 'POST',
            data: {
                phimId: phimId  // Chỉ truyền phimId
            },
            headers: {
                'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()  // CSRF token
            },
            success: function (response) {
                // Nếu lưu thành công, chuyển đến trang phim (hoặc thực hiện hành động khác)
                var link = button.find('a').attr('href');
                if (link) {
                    window.location.href = link;
                } else {
                    alert("Không tìm thấy liên kết để chuyển hướng.");
                }
            },
            error: function (xhr, status, error) {
                alert("Có lỗi xảy ra: " + error);
            }
        });
    }
</script>
