@model AHTB_TimBanCungGu_API.Models.Phim


@{
    ViewData["Title"] = "Chi Tiết Phim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css">
    @*   <link href="/css/chitietphim.css" rel="stylesheet" /> *@
</head>
<style>

    /* Phần chi tiết phim */
    .movie-detail {
        margin-top: 20px;
        display: flex;
        gap: 20px;
        padding: 20px;
        background-color: #222;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    /* Hình ảnh phim */
    .movie-poster {
        width: 100%;
        max-width: 400px; /* Giới hạn chiều rộng của ảnh */
        border-radius: 8px;
        object-fit: cover;
    }

    /* Thông tin phim */
    .movie-info {
        flex: 1; /* Chiếm hết phần còn lại của chiều ngang */
        color: #ddd;
    }

        .movie-info h2 {
            font-size: 2rem;
            color: #FF4500;
        }

        .movie-info p {
            font-size: 1rem;
            color: #ccc;
        }

        .movie-info strong {
            color: #FF4500;
        }

    /* Nút Xem Phim và Yêu Thích */
    .btn-container {
        display: flex;
        align-items: center;
        gap: 10px;
        flex-wrap: wrap;
        margin-top: 10px;
    }

    .btn-watch {
        background-color: #dc3545;
        border: none;
        color: white;
        padding: 8px 16px;
        font-size: 14px;
        border-radius: 5px;
        cursor: pointer;
        text-align: center;
        text-decoration: none;
    }

        .btn-watch a {
            color: white;
            text-decoration: none;
        }

        .btn-watch:hover {
            background-color: #b02a37;
        }

    /* Phần phim cùng thể loại */
    .recommended-section {
        margin-top: 40px;
    }

    /* Tạo hiệu ứng khi hover vào thẻ card */
    .card-hover {
        position: relative;
        overflow: hidden;
        transition: transform 0.3s ease-in-out;
        background-color: #343a40; /* Màu nền cho thẻ card */
        color: #f8f9fa; /* Màu chữ cho thẻ card */
        border-radius: 8px; /* Bo tròn các góc của thẻ */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); /* Đổ bóng để thẻ nổi bật */
    }

        .card-hover img {
            width: 100%;
            height: 350px;
            object-fit: cover; /* Ảnh sẽ được cắt theo tỷ lệ và không bị biến dạng */
            transition: filter 0.3s ease-in-out;
        }

        /* Khi hover vào ảnh, độ sáng giảm để tạo hiệu ứng nổi bật */
        .card-hover:hover img {
            filter: brightness(80%);
        }

        /* Phóng to nhẹ thẻ card khi hover để tạo hiệu ứng nổi bật */
        .card-hover:hover {
            transform: scale(1.05);
        }

    .card-body {
        padding: 15px;
        text-align: center;
    }

    /* Nút "Xem ngay" chỉ hiển thị khi hover vào thẻ card */
    .btn-xem-ngay {
        position: absolute;
        transition: opacity 0.3s ease-in-out;
        opacity: 0;
        pointer-events: none;
        display: flex;
        align-items: center; /* Giúp biểu tượng và chữ nằm cùng hàng */
        justify-content: center;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background-color: #dc3545;
        border: none;
        color: white;
        padding: 12px 24px;
        border-radius: 50px;
        font-size: 16px;
        cursor: pointer;
        text-align: center;
        white-space: nowrap;
    }

        .btn-xem-ngay i {
            font-size: 1em; /* Giảm kích thước icon để vừa với chữ */
            margin-right: 8px; /* Khoảng cách giữa biểu tượng và chữ */
            vertical-align: middle; /* Căn chỉnh biểu tượng theo chiều dọc */
        }



    /* Khi hover vào thẻ card, nút sẽ hiện lên */
    .card-hover:hover .btn-xem-ngay {
        opacity: 1;
        pointer-events: auto; /* Cho phép click khi hover */
    }

    /* Tạo biểu tượng cho nút "Xem ngay" */
    .card-hover .btn-xem-ngay i {
        margin-right: 8px;
    }

    /* Điều chỉnh font và màu cho tiêu đề */
    .card-title {
        font-size: 18px;
        font-weight: bold;
        color: #f8f9fa;
    }

    /* Căn chỉnh phân trang */
    .pagination {
        margin-top: 20px;
        justify-content: center;
    }
</style>
<body>
    <div class="container">
        <div class="container">
            <div class="row movie-detail">
                <!-- Hình ảnh phim -->
                <div class="col-md-6">
                    <img src="/images/@Model.HinhAnh" alt="Áp phích phim" class="img-fluid" style="border-radius: 8px; width: 100%; height: 100%; object-fit: contain;">
                </div>

                <!-- Thông tin phim -->
                <div class="col-md-6 movie-info">
                    <h2>@Model.TenPhim</h2>
                    <p>
                        @if (ViewBag.DanhSachPhan.Count > 1)
                        {
                            foreach (var phan in ViewBag.DanhSachPhan)
                            {
                                <h4>Phần @phan.SoPhan (@phan.SoLuongTap Tập)</h4>
                            }
                        }
                        else
                        {
                            <h4>Phim lẻ</h4>
                        }
                        <strong>Diễn Viên:</strong> @Model.DienVien<br>
                        <strong>Ngày phát hành:</strong> @Model.NgayPhatHanh.Year<br>
                        <strong>Mô tả:</strong> @Model.MoTa<br />
                        <strong>Dạng Phim:</strong> <b>@Html.DisplayFor(model => model.TheLoai.TenTheLoai)</b><br />
                        <strong>Đánh giá:</strong> <b>@Model.DanhGia / 10</b>
                    </p>


                    <!-- Logic hiển thị nút xem theo loại phim -->
                    @if (ViewBag.DanhSachPhan != null && ViewBag.DanhSachPhan.Count == 1)
                    {
                        <!-- Phim lẻ -->
                        @foreach (var phan in ViewBag.DanhSachPhan)
                        {
                            <button class="btn-watch"
                                    data-phim-id="@Model.IDPhim"
                                    data-phan-id="@phan.SoPhan"
                                    onclick="luuLichSuXem(event)">
                                <a href="@Url.Action("XemPhim", "Phim", new { idPhim = Model.IDPhim, soPhan = phan.SoPhan, soluongTap = phan.SoLuongTap })" style="text-decoration: none; color: white;">
                                    Xem Ngay
                                </a>
                            </button>

                        }

                    }
                    else
                    {
                        <!-- Phim bộ -->
                        @foreach (var phan in ViewBag.DanhSachPhan)
                        {
                            <button class="btn-watch"
                                    data-phim-id="@Model.IDPhim"
                                    data-phan-id="@phan.SoPhan"
                                    onclick="luuLichSuXem(event)">
                                <a href="@Url.Action("XemPhim", "Phim", new { idPhim = Model.IDPhim, soPhan = phan.SoPhan, soluongTap = phan.SoLuongTap })" style="text-decoration: none; color: white;">
                                    Xem Ngay
                                </a>
                            </button>
                        }

                    }

                    <!-- Nút yêu thích -->
                    <button class="btn-watch">Yêu Thích</button>
                </div>
            </div>
        </div>

        <div class="recommended-section">
            <h2 style="color:white">Phim cùng thể loại</h2>
            <div class="row">
                @foreach (var phim in ViewBag.PhimDeCu)
                {
                    <div class="col-md-3 mb-4">
                        <div class="card-hover">
                            <img src="/images/@phim.HinhAnh" alt="@phim.TenPhim" class="card-img-top">
                            <div class="card-body text-center">
                                <h5 class="card-title">@phim.TenPhim</h5>
                                <button class="btn-xem-ngay">
                                    <a href="@Url.Action("ChiTietPhim", "Phim", new { id = phim.IDPhim })" style="text-decoration: none; color: white;"> <i class="bi bi-play-fill"></i> Xem ngay</a>
                                </button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script>

        window.onload = function () {
            var alert = document.querySelector('.alert-success');
            if (alert) {
                setTimeout(function () {
                    alert.style.display = 'none';
                }, 5000);
            }
        };
        function luuLichSuXem(event) {
            event.preventDefault();  // Ngừng hành động mặc định

            // Tìm button hoặc phần tử gần nhất có data- thuộc tính
            var button = $(event.target).closest('button');
            var phimId = button.data('phim-id');
            var phanId = button.data('phan-id');  // Nếu cần sử dụng phanId

            // Kiểm tra dữ liệu hợp lệ
            if (!phimId) {
                alert('ID phim không hợp lệ!');
                return;
            }

            // Gửi yêu cầu AJAX
            $.ajax({
                url: '/LichSuXem/LuuLichSuXem',
                type: 'POST',
                data: {
                    phimId: phimId  // Chỉ truyền phimId
                },
                headers: {
                    'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()  // CSRF token
                },
                success: function (response) {
                    // Nếu lưu thành công, chuyển đến trang phim (hoặc thực hiện hành động khác)
                    var link = button.find('a').attr('href');
                    if (link) {
                        window.location.href = link;
                    } else {
                        alert("Không tìm thấy liên kết để chuyển hướng.");
                    }
                },
                error: function (xhr, status, error) {
                    alert("Có lỗi xảy ra: " + error);
                }
            });
        }
    </script>
</body>