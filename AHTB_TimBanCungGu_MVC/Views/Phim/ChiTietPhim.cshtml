@model AHTB_TimBanCungGu_API.Models.Phim

@{
    ViewData["Title"] = "Chi Tiết Phim";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link href="/css/chitietphim.css" rel="stylesheet" />
</head>

<style>
    body {
        font-family: 'Roboto', sans-serif;
        background-color: #333;
        color: white;
    }

    .container {
        padding-top: 2rem;
    }

    .search-bar {
        margin-bottom: 20px;
    }

    .movie-detail {
        display: flex;
        gap: 20px;
        padding: 20px;
        margin-bottom: 10px;
    }

    .movie-info h2 {
        font-size: 1.8rem;
        color: white;
    }

    .movie-info p {
        font-size: 1rem;
        color: #666;
    }

    .btn-watch {
        margin-top: 10px;
        background-color: #007bff;
        color: #fff;
        border: none;
        padding: 8px 12px;
        border-radius: 4px;
        font-size: 0.9rem;
        transition: background-color 0.3s ease;
    }

        .btn-watch:hover {
            background-color: #0056b3;
        }

    .recommended-section h2 {
        font-size: 1.5rem;
        color: #444;
        margin-bottom: 15px;
    }

    .film-card {
        border: none;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
        background-color: #ffffff;
    }

        .film-card:hover {
            transform: scale(1.05);
        }

        .film-card img {
            border-radius: 8px 8px 0 0;
        }

        .film-card .card-body {
            padding: 0.8rem;
        }

        .film-card .card-title {
            font-size: 1rem;
            color: #333;
        }

    .btn-secondary {
        background-color: #17a2b8;
        border: none;
        font-size: 0.85rem;
        transition: background-color 0.3s ease;
    }

        .btn-secondary:hover {
            background-color: #138496;
        }
</style>

<body>
    <div class="container">
        <div class="col-sm-6 search-bar">
            <form method="get" action="@Url.Action("ChiTietPhim", "Phim")">
                <input type="hidden" name="id" value="@Model.IDPhim" />
                <input class="form-control" type="search" name="searchTerm" placeholder="Tìm kiếm" aria-label="Search" value="@Context.Request.Query["searchTerm"]">
            </form>
        </div>


        <div class="com-sm-6 movie-detail">
            <img src="/images/@Model.HinhAnh" alt="Movie Poster" class="img-fluid" style="border-radius: 8px;">
            <div class="movie-info">
                <h2>@Model.TenPhim</h2>
                <p>
                    @if (ViewBag.DanhSachPhan != null)
                    {
                        foreach (var phan in ViewBag.DanhSachPhan)
                        {
                            <h4>Phần @phan.SoPhan (Số tập: @phan.SoLuongTap)</h4>
                        }
                    }
                    Diễn Viên: @Model.DienVien<br>
                    Ngày phát hành: @Model.NgayPhatHanh.Year<br>
                    Mô tả: @Model.MoTa<br />
                    Dạng Phim: <b>@Html.DisplayFor(model => model.TheLoai.TenTheLoai)</b><br />
                    Đánh giá: <b>@Model.DanhGia / 10</b>
                </p>
                @foreach (var phan in ViewBag.DanhSachPhan)
                {
                    <button class="btn-watch">
                        <a href="@Url.Action("XemPhim", "Phim", new { idPhim = Model.IDPhim, soPhan = phan.SoPhan , soluongTap = phan.SoLuongTap})" style="text-decoration: none; color: white;">Phần @phan.SoPhan</a>
                    </button>
                }
                <button class="btn-watch">Yêu Thích</button>
            </div>
        </div>

        <div class="recommended-section">
            <h2 style="color:white">Phim cùng thể loại</h2>
            <div class="row">
                @foreach (var phim in ViewBag.PhimDeCu)
                {
                    <div class="col-6 col-md-4 col-lg-3 mb-4">
                        <div class="card film-card">
                            <img src="/images/@phim.HinhAnh" class="card-img-top" alt="@phim.TenPhim">
                            <div class="card-body text-center">
                                <h5 class="card-title">@phim.TenPhim</h5>
                                <a href="@Url.Action("ChiTietPhim", "Phim", new { id = phim.IDPhim })" class="btn btn-secondary">Chi Tiết</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
