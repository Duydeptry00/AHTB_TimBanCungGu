@model AHTB_TimBanCungGu_API.Models.Phim

@{
    ViewData["Title"] = "Chi Tiết Phim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css">


    <link href="/css/chitietphim.css" rel="stylesheet" />
</head>

<style>
    body {
        font-family: 'Roboto', sans-serif;
        background-color: #333;
        color: white;
    }

    .container {
        padding-top: 2rem;
    }

    .search-bar {
        margin-bottom: 20px;
    }

    .movie-detail {
        display: flex;
        gap: 20px;
        padding: 20px;
        margin-bottom: 10px;
    }

    .movie-info h2 {
        font-size: 1.8rem;
        color: white;
    }

    .movie-info p {
        font-size: 1rem;
        color: #666;
    }

    .btn-watch {
        margin-top: 10px;
        background-color: #007bff;
        color: #fff;
        border: none;
        padding: 8px 12px;
        border-radius: 4px;
        font-size: 0.9rem;
        transition: background-color 0.3s ease;
    }

        .btn-watch:hover {
            background-color: #0056b3;
        }

    .recommended-section h2 {
        font-size: 1.5rem;
        color: #444;
        margin-bottom: 15px;
    }

    .film-card {
        border: none;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
        background-color: #ffffff;
    }

        .film-card:hover {
            transform: scale(1.05);
        }

        .film-card img {
            border-radius: 8px 8px 0 0;
        }

        .film-card .card-body {
            padding: 0.8rem;
        }

        .film-card .card-title {
            font-size: 1rem;
            color: #333;
        }

    .btn-secondary {
        background-color: #17a2b8;
        border: none;
        font-size: 0.85rem;
        transition: background-color 0.3s ease;
    }

        .btn-secondary:hover {
            background-color: #138496;
        }

    .film-card img {
     
        height: 400px; 
       
    }

</style>

<body>
    <div class="container">
        <div class="col-sm-6 search-bar">
            <form method="get" action="@Url.Action("ChiTietPhim", "Phim")">
                <input type="hidden" name="id" value="@Model.IDPhim" />
                <input class="form-control" type="search" name="searchTerm" placeholder="Tìm kiếm" aria-label="Search" value="@Context.Request.Query["searchTerm"]">
            </form>
        </div>


        <div class="container">
            <div class="row movie-detail">
                <!-- Hình ảnh phim -->
                <div class="col-md-6">
                    <img src="/images/@Model.HinhAnh" alt="Áp phích phim" class="img-fluid" style="border-radius: 8px; width: 100%; height: 100%; object-fit: contain;">
                </div>

                <!-- Thông tin phim -->
                <div class="col-md-6 movie-info">
                    <h2>@Model.TenPhim</h2>
                    <p>
                        @if (ViewBag.DanhSachPhan != null)
                        {
                            foreach (var phan in ViewBag.DanhSachPhan)
                            {
                                <h4>Phần @phan.SoPhan (Số tập: @phan.SoLuongTap)</h4>
                            }
                        }
                        <strong>Diễn Viên:</strong> @Model.DienVien<br>
                        <strong>Ngày phát hành:</strong> @Model.NgayPhatHanh.Year<br>
                        <strong>Mô tả:</strong> @Model.MoTa<br />
                        <strong>Dạng Phim:</strong> <b>@Html.DisplayFor(model => model.TheLoai.TenTheLoai)</b><br />
                        <strong>Đánh giá:</strong> <b>@Model.DanhGia / 10</b>
                    </p>

                    <!-- Các phần phim -->
                    @foreach (var phan in ViewBag.DanhSachPhan)
                    {
                        <button class="btn-watch">
                            <a href="@Url.Action("XemPhim", "Phim", new { idPhim = Model.IDPhim, soPhan = phan.SoPhan , soluongTap = phan.SoLuongTap})" style="text-decoration: none; color: white;">Phần @phan.SoPhan</a>
                        </button>
                    }

                    <!-- Nút yêu thích -->
                    <button class="btn-watch">Yêu Thích</button>
                </div>

            </div>
        </div>


        <div class="recommended-section">
            <h2 style="color:white">Phim cùng thể loại</h2>
            <div class="row">
                @foreach (var phim in ViewBag.PhimDeCu)
                {
                    <div class="col-6 col-md-4 col-lg-3 mb-4">
                        <div class="card film-card">
                            <img src="/images/@phim.HinhAnh" class="card-img-top" alt="@phim.TenPhim">
                            <div class="card-body text-center">
                                <h5 class="card-title">@phim.TenPhim</h5>
                                <a href="@Url.Action("ChiTietPhim", "Phim", new { id = phim.IDPhim })" class="btn btn-secondary">Chi Tiết</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>


    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
