@model AHTB_TimBanCungGu_API.ViewModels.Profile
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Trang cá nhân</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f5f5f5;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
        }

        .profile-container {
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            width: 80%;
            max-width: 1000px;
            margin: 20px 0;
            padding: 20px;
            display: flex;
            flex-direction: row;
            gap: 20px;
        }

        .profile-header {
            position: relative;
            flex: 1;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }

            .profile-header img {
                width: 200px;
                height: 200px;
                border-radius: 50%; /* Hình tròn */
                object-fit: cover;
                border: 6px solid #0078D4; /* Viền mặc định */
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
                transition: transform 0.3s ease-in-out, border 0.3s ease-in-out;
            }

                .profile-header img.vip {
                    border: 6px double gold; /* Viền vàng đôi cho VIP */
                    box-shadow: 0 0 15px rgba(255, 215, 0, 0.5); /* Ánh sáng lấp lánh */
                    transform: scale(1.1); /* Phóng to ảnh một chút */
                }

            .profile-header h1 {
                margin-top: 15px;
                font-size: 24px;
                color: #333;
                text-align: center;
            }

        .profile-details {
            flex: 2;
            font-size: 16px;
            color: #555;
            display: flex;
            flex-direction: column;
            gap: 10px;
        }

            .profile-details p {
                margin: 0;
            }

            .profile-details strong {
                display: block;
                margin-bottom: 5px;
                color: #0078D4; /* Màu nổi bật cho tiêu đề */
            }

            .profile-details .info-item {
                margin-bottom: 10px;
            }
    </style>
</head>
<body>
    <div class="profile-container">
        <div class="profile-header">
            <!-- Hiện ảnh đại diện, nếu người dùng là VIP thì áp dụng class "vip" -->
            <img src="@(Model.Avt.Any() ? "/Uploads/" + Model.Avt[0] : "/Uploads/default.jpg")" alt="Ảnh đại diện" class="@(Model.IsPremium ? "vip" : "")">
            <h1>@Model.HoTen</h1>
        </div>

        <div class="profile-details">
            <div class="info-item">
                <strong>Giới tính:</strong> @(Model.GioiTinh ?? "Không có thông tin")
            </div>
            <div class="info-item">
                <strong>Ngày sinh:</strong> @(Model.NgaySinh?.ToString("dd/MM/yyyy") ?? "Không có thông tin")
            </div>
            <div class="info-item">
                <strong>Số điện thoại:</strong> @(Model.SoDienThoai ?? "Không có thông tin")
            </div>
            <div class="info-item">
                <strong>Mô tả:</strong> @(Model.MoTa ?? "Không có thông tin")
            </div>
            <div class="info-item">
                <strong>Địa chỉ:</strong> @(Model.DiaChi ?? "Không có thông tin")
            </div>
        </div>
    </div>
</body>
</html>
