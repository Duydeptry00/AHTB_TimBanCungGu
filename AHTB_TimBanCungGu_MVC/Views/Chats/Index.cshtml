                                            input: 'textarea',
                                            inputLabel: 'Lý do báo cáo',
                                            inputPlaceholder: 'Hãy nhập lý do tại đây...',
                                            showCancelButton: true,
                                            confirmButtonText: 'Gửi',
                                            cancelButtonText: 'Hủy',
