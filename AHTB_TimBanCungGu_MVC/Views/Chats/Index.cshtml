                                    menu.classList.add('hidden'); // Đóng menu khác
                                }
                            });

                            // Hiện hoặc ẩn menu hiện tại
                            menuOptions.classList.toggle('hidden');
                        };

                        conversationItem.querySelector('.report-btn').onclick = () => {
                            Swal.fire({
                                title: 'Báo cáo người dùng',
