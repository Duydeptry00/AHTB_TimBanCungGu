                                inputOptions: {
                                    'Spam/Tin nhắn rác': 'Spam/Tin nhắn rác',
                                    'Lạm dụng/Ngôn ngữ không phù hợp': 'Lạm dụng/Ngôn ngữ không phù hợp',
