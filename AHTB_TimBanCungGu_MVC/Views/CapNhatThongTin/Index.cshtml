@model AHTB_TimBanCungGu_API.Models.ThongTinCaNhan

@{
    ViewData["Title"] = "Chỉnh sửa Thông tin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
<link rel="stylesheet" href="~/css/capnhatthongtin.css">

<div class="container mt-5">
    <div class="text-center mb-4">
        <h1>Chỉnh sửa Thông tin Cá nhân</h1>
    </div>

    <div class="card shadow-lg custom-card">
        <div class="card-body">
            <form method="post" enctype="multipart/form-data">
                <h4 class="text-center">Thông tin Cá nhân</h4>
                <!-- Section: Thông tin cá nhân -->
                <div class="info-section mb-4"> 
                  
                    <div class="info-item">
                        <label class="info-label">Email:</label>
                        <span class="info-value">@Model.Email</span>
                    </div>
                    <div class="info-item">
                        <label class="info-label">Họ tên:</label>
                        <span class="info-value">@Model.HoTen</span>
                    </div>
                    <div class="info-item">
                        <label class="info-label">Giới tính:</label>
                        <span class="info-value">@Model.GioiTinh</span>
                    </div>
                    <div class="info-item">
                        <label class="info-label">Ngày sinh:</label>
                        <span class="info-value">@Model.NgaySinh?.ToString("dd/MM/yyyy")</span>
                    </div>
                    <div class="info-item">
                        <label class="info-label">Số điện thoại:</label>
                        <span class="info-value">@Model.SoDienThoai</span>
                    </div>
                    <div class="info-item">
                        <label class="info-label">Premium:</label>
                        <span class="info-value">
                            @if (ViewBag.Message != null)
                            {
                                <div class="alert alert-warning">
                                    @ViewBag.Message
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-success">
                                    Gói Premium: <strong>@ViewBag.TenGoiPremium</strong><br />
                                    Ngày hết hạn: @ViewBag.NgayHetHan.ToString("dd/MM/yyyy")
                                </div>
                            }
                        </span>
                    </div>
                    <div class="info-item">
                        <label class="info-label">Địa chỉ:</label>
                        <span class="info-value">@Model.DiaChi</span>
                    </div>
                    <div class="info-item">
                        <label class="info-label">Facebook:</label>
                        <span class="info-value">@Model.Facebook</span>                   
                    </div>
                    <div class="info-item">
                        <label class="info-label">Instagram:</label>
                        <span class="info-value">@Model.Instagram</span>
                    </div>
                    <div class="info-item">
                        <label class="info-label">Mô tả:</label>
                        <span class="info-value">@Model.MoTa</span>
                    </div>
                </div>

                <!-- Section: Ảnh cá nhân -->
                <div class="photo-section mb-4">
                    <h4 class="text-center">Ảnh Cá nhân</h4>
                    @if (Model.AnhCaNhan != null && Model.AnhCaNhan.Any())
                    {
                        <div class="photo-grid">
                            @foreach (var anh in Model.AnhCaNhan)
                            {
                                <div class="photo-item">
                                    <div class="image-frame">
                                        <img src="@Url.Content("~/uploads/" + anh.HinhAnh)" alt="Ảnh cá nhân" />
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-center">Chưa có ảnh cá nhân.</p>
                    }
                </div>

                <!-- Button: Chỉnh sửa thông tin -->
                <div class="text-center">
                    <a href="@Url.Action("Edit", "CapNhatThongTin", new { id = ViewBag.CaNhan })" class="btn custom-btn">
                        Chỉnh sửa thông tin
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
