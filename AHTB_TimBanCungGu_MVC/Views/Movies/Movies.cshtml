@{
    ViewData["Title"] = "Phim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Danh Sách Phim</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    @*    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css"> *@

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css">

    <style>
        /* Tạo hiệu ứng khi hover vào thẻ card */
        .card-hover {
            position: relative;
            overflow: hidden;
            transition: transform 0.3s ease-in-out;
            background-color: #343a40; /* Màu nền cho thẻ card */
            color: #f8f9fa; /* Màu chữ cho thẻ card */
            border-radius: 8px; /* Bo tròn các góc của thẻ */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); /* Đổ bóng để thẻ nổi bật */
        }

            .card-hover img {
                width: 100%;
                height: 350px;
                object-fit: cover; /* Ảnh sẽ được cắt theo tỷ lệ và không bị biến dạng */
                transition: filter 0.3s ease-in-out;
            }

            /* Khi hover vào ảnh, độ sáng giảm để tạo hiệu ứng nổi bật */
            .card-hover:hover img {
                filter: brightness(80%);
            }

            /* Phóng to nhẹ thẻ card khi hover để tạo hiệu ứng nổi bật */
            .card-hover:hover {
                transform: scale(1.05);
            }

        .card-body {
            padding: 15px;
            text-align: center;
        }

        /* Nút "Xem ngay" chỉ hiển thị khi hover vào thẻ card */
        .btn-xem-ngay {
            position: absolute;
            transition: opacity 0.3s ease-in-out;
            opacity: 0;
            pointer-events: none;
            display: flex;
            align-items: center; /* Giúp biểu tượng và chữ nằm cùng hàng */
            justify-content: center;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background-color: #dc3545;
            border: none;
            color: white;
            padding: 12px 24px;
            border-radius: 50px;
            font-size: 16px;
            cursor: pointer;
            text-align: center;
            white-space: nowrap;
        }

            .btn-xem-ngay i {
                font-size: 1em; /* Giảm kích thước icon để vừa với chữ */
                margin-right: 8px; /* Khoảng cách giữa biểu tượng và chữ */
                vertical-align: middle; /* Căn chỉnh biểu tượng theo chiều dọc */
            }

       /* Khi hover vào thẻ card, nút sẽ hiện lên */
                .card-hover:hover .btn-xem-ngay {
                    opacity: 1;
                    pointer-events: auto; /* Cho phép click khi hover */
                }

                /* Tạo biểu tượng cho nút "Xem ngay" */
                .card-hover .btn-xem-ngay i {
                    margin-right: 8px;
                }

                /* Điều chỉnh font và màu cho tiêu đề */
                .card-title {
                    font-size: 18px;
                    font-weight: bold;
                    color: #f8f9fa;
                }

                /* Căn chỉnh phân trang */
                .pagination {
                    margin-top: 20px;
                    justify-content: center;
                }

                .speech-recognition-btn button {
                    display: flex;
                    align-items: center;
                    justify-content: center;
                    width: 50px; /* Kích thước của nút */
                    height: 50px; /* Kích thước của nút */
                    color: white; /* Màu chữ trắng */
                    border-radius: 50%; /* Hình dạng tròn */
                    font-size: 28px; /* Kích thước biểu tượng micro */
                    border: none; /* Loại bỏ viền */
                    cursor: pointer; /* Con trỏ khi hover */
                    transition: background-color 0.3s, transform 0.2s; /* Hiệu ứng chuyển màu và phóng to khi hover */
                }

                    .speech-recognition-btn button:hover {

                        transform: scale(1.1); /* Phóng to nút khi hover */
                    }

                    .speech-recognition-btn button:active {
                        transform: scale(0.95); /* Nhỏ nút khi nhấn */
                    }
    </style>
</head>
<body>
    <div class="container my-5 custom-container">
        <div class="row mb-4">
            <div class="col-md-6">
                <form id="searchForm" action="/Movies/Movies" method="get" onsubmit="return false;">
                    <div class="movies" style="display: flex">
                        <input style="margin-right:10px" type="text" id="searchBox" class="form-control" name="query" placeholder="Tìm kiếm phim..." value="@ViewBag.Search">
                        <div class="speech-recognition-btn">
                            <button style="border-radius:5px;" type="button" onclick="startRecognition()">🎤</button>
                        </div>
                    </div>

                </form>
            </div>
            <div class="col-md-2">
                <button class="btn btn-secondary" style="width: 100px; height: 60px; margin-left: 600px;" type="button" data-bs-toggle="dropdown">
                    <i class="bi bi-list"></i> 
                </button>

                <ul class="dropdown-menu" id="filter-options">
                    <li><a class="dropdown-item @(@ViewBag.Genre == "Tất cả" ? "active" : "")" href="#" onclick="filterMovies('Tất cả')">Tất cả</a></li>
                    <li><a class="dropdown-item @(@ViewBag.Genre == "Hành động" ? "active" : "")" href="#" onclick="filterMovies('Hành động')">Hành động</a></li>
                    <li><a class="dropdown-item @(@ViewBag.Genre == "Lãng mạn" ? "active" : "")" href="#" onclick="filterMovies('Lãng mạn')">Lãng mạn</a></li>
                    <li><a class="dropdown-item @(@ViewBag.Genre == "Drama" ? "active" : "")" href="#" onclick="filterMovies('Drama')">Drama</a></li>
                </ul>
            </div>
        </div>

        <div class="row" id="movie-container">
            <h2>Danh sách</h2>
            @if (ViewBag.NoResults == true)
            {
                <div class="col-12 no-results text-center">
                    <p>Không tìm thấy phim nào.</p>
                </div>
            }
            else
            {
                <div class="grid-container">
                    @foreach (var movie in Model)
                    {
                        <div class="grid-item">
                            <div class="card-hover">
                                <img src="/images/@movie.HinhAnh" alt="@movie.TenPhim" class="card-img-top">
                                <div class="card-body">
                                    <h5 class="card-title">@movie.TenPhim</h5>
                                    <button class="btn-xem-ngay">
                                        <a asp-controller="Phim" asp-action="ChiTietPhim" asp-route-id="@movie.IDPhim" style="text-decoration: none; color: white;">
                                            <i class="bi bi-play-fill"></i> Xem ngay
                                        </a>
                                    </button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                @if (ViewBag.TotalPages > 1)
                {
                    <nav aria-label="Phân trang">
                        <ul class="pagination justify-content-center" id="pagination-container">
                            @for (int i = 1; i <= ViewBag.TotalPages; i++)
                            {
                                <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                    <a class="page-link" href="#" data-page="@i">@i</a>
                                </li>
                            }
                        </ul>
                    </nav>
                }
            }
        </div>

    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>

    <script>
        $(document).ready(function () {
            function fetchMovies(page = 1, genre = 'Tất cả', search = '') {
                $.ajax({
                    url: '@Url.Action("Movies", "Movies")',
                    type: 'GET',
                    data: { page: page, genre: genre, search: search },
                    success: function (data) {
                        $('#movie-container').html($(data).find('#movie-container').html());
                        $('#pagination-container').html($(data).find('#pagination-container').html());
                    }
                });
            }

            // Thay đổi khi người dùng nhập từ khóa tìm kiếm
            $('#searchBox').on('input', function () {
                fetchMovies(1, $('#filter-options .dropdown-item.active').text(), $(this).val());
            });

            // Thay đổi thể loại khi người dùng chọn thể loại
            $('.dropdown-item').on('click', function () {
                $('.dropdown-item').removeClass('active');
                $(this).addClass('active');
                fetchMovies(1, $(this).text(), $('#searchBox').val());
            });

            // Phân trang
            $(document).on('click', '.page-link', function (e) {
                e.preventDefault();
                var page = $(this).data('page');
                fetchMovies(page, $('#filter-options .dropdown-item.active').text(), $('#searchBox').val());
            });

            // Nhận diện giọng nói
            function startRecognition() {
                if (!('webkitSpeechRecognition' in window)) {
                    alert("Trình duyệt của bạn không hỗ trợ nhận diện giọng nói.");
                    return;
                }
                var recognition = new webkitSpeechRecognition();
                recognition.lang = 'vi-VN';
                recognition.continuous = false;
                recognition.interimResults = false;

                recognition.onstart = function () {
                    console.log("Bắt đầu nhận giọng nói...");
                };

                recognition.onerror = function (event) {
                    console.log("Có lỗi xảy ra: ", event.error);
                };

                recognition.onresult = function (event) {
                    var result = event.results[0][0].transcript;
                    console.log("Kết quả nhận diện giọng nói:", result);
                    $('#searchBox').val(result);
                    fetchMovies(1, $('#filter-options .dropdown-item.active').text(), result);
                };

                recognition.start();
            }

            // Gán sự kiện nhận diện giọng nói vào nút
            $('.speech-recognition-btn').click(startRecognition);
        });
    </script>
</body>
</html>