@model List<AHTB_TimBanCungGu_API.Models.Phim>


 <h1>Quản Lý Danh Mục</h1>
<!-- Movie table -->
<table class="table table-dark  text-light">
    <thead>
        <tr>
            <th class="text-center" style="padding-right: 10px;">Tên Phim</th>
            <th class="text-center">Danh Mục</th>
            <th class="text-center">Quản lý</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-center">@item.TenPhim</td>
                <td class="text-center">@item.MoTa</td>
                <td class="text-center">
                    <div class="d-flex justify-content-center">
                        <!-- Edit Button with Bootstrap Icon -->
                        <a class="btn btn-primary me-2" data-bs-toggle="modal" data-bs-target="#editMovieModal_@item.IDPhim">
                            <i class="bi bi-pencil"></i> Sửa
                        </a>
                        <!-- You can add a delete button or other actions here if needed -->
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

    <!-- Add New Movie Modal -->
    <div class="modal fade" id="addNewMovieModal" tabindex="-1" aria-labelledby="addNewMovieModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content bg-white text-dark">
                <div class="modal-header">
                    <h5 class="modal-title" id="addNewMovieModalLabel">Thêm Mới</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form asp-action="Create" method="post" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="movieTitle" class="form-label">Tên Phim</label>
                            <input type="text" class="form-control" name="TenPhim" required>
                        </div>
                        <div class="mb-3">
                            <label for="actorName" class="form-label">Danh mục</label>
                            <input type="text" class="form-control" name="MoTa" required>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                            <button type="submit" class="btn btn-primary">Lưu</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <body></body>
    @foreach (var item in Model)
    {
        <a class="" data-bs-toggle="modal" data-bs-target="#editMovieModal_@item.IDPhim">
        </a>
    <!-- Edit Movie Modal -->
    <div class="modal fade" id="editMovieModal_@item.IDPhim" tabindex="-1" aria-labelledby="editMovieModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content bg-white text-dark">
                <div class="modal-header text-danger">
                    <!-- Red text for header -->
                    <h5 class="modal-title" id="editMovieModalLabel">Chỉnh Sửa </h5>
                    <button type="button" class="btn-close text-danger" data-bs-dismiss="modal" aria-label="Close"></button> <!-- Red close button -->
                </div>
                <div class="modal-body text-danger">
                    <!-- Red text for body -->
                    <form asp-action="Edit" method="post" enctype="multipart/form-data">
                        <input type="hidden" name="IDPhim" value="@item.IDPhim">
                        <div class="mb-3">
                            <label for="editMovieTitle" class="form-label">Tên Phim</label>
                            <input type="text" class="form-control" name="TenPhim" value="@item.TenPhim" required>
                        </div>
                        <div class="mb-3">
                            <label for="editActorName" class="form-label">Danh mục</label>
                            <input type="text" class="form-control" name="MoTa" value="@item.MoTa" required>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Đóng</button> <!-- Red color for 'Close' button -->
                            <button type="submit" class="btn btn-primary">Cập Nhật</button> <!-- No color change for 'Update' button -->
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
    }
 <style>
    /* Custom red modal header text */
    .modal-header.text-danger h5 {
        color: red;
    }

    /* Custom red close button */
    .modal-header .btn-close.text-danger {
        color: red;
    }

        /* Custom red close button on hover */
        .modal-header .btn-close.text-danger:hover {
            color: darkred;
        }

    /* Custom red "Đóng" button */
    .modal-footer .btn-danger {
        background-color: red;
        border-color: red;
    }

        .modal-footer .btn-danger:hover {
            background-color: darkred;
            border-color: darkred;
        }
    /* Custom red "Đóng" button */
    .modal-footer .btn-danger {
        background-color: red;
        border-color: red;
    }
</style>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

    <script>
        document.addEventListener('DOMContentLoaded', function () {
    const sidebar = document.querySelector('.sidebar');
    const navbarToggler = document.querySelector('.navbar-toggler');

    navbarToggler.addEventListener('click', function () {
        sidebar.classList.toggle('show');
    });

    document.querySelectorAll('.nav-link').forEach(link => {
        link.addEventListener('click', function () {
            sidebar.classList.remove('show');
        });
    });
});

function HandleLogout() {
    // Add your logout logic here
    alert('Logged out successfully!');
}

    </script>

</html>
