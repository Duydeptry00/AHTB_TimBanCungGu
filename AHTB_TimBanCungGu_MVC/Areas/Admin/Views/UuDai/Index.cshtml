@model IEnumerable<AHTB_TimBanCungGu_API.Models.UuDai>

@{
    ViewData["Title"] = "Danh sách ưu đãi";
}

<h1 style="color: #d32f2f; text-align: center; margin-bottom: 20px;">Danh sách ưu đãi</h1>

<p class="text-center">
    <a asp-action="Create" class="btn btn-custom">Tạo mới</a>
</p>

<table class="table table-striped table-dark table-bordered" style="border-color: #444;">
    <thead style="background-color: #333; color: #fff;">
        <tr>
            <th>@Html.DisplayNameFor(model => model.TenUuDai)</th>
            <th>@Html.DisplayNameFor(model => model.NgayUuDai)</th>
            <th>@Html.DisplayNameFor(model => model.PhanTram)</th>
            <th>@Html.DisplayNameFor(model => model.Hinh)</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.TenUuDai)</td>
                <td>@Html.DisplayFor(modelItem => item.NgayUuDai)</td>
                <td>@Html.DisplayFor(modelItem => item.PhanTram) %</td>
                <td>
                    <img src="@item.Hinh" alt="Image" style="width: 50px; height: 50px; object-fit: cover; border-radius: 5px;" />
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdUuDai" class="action-link">Sửa</a> 
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    /* Button Custom Styling */
    .btn-custom {
        background-color: #d32f2f;
        color: #fff;
        padding: 10px 20px;
        font-weight: bold;
        border-radius: 5px;
        transition: background-color 0.3s ease;
        text-decoration: none;
    }

        .btn-custom:hover {
            background-color: #b71c1c;
            color: #fff;
        }

    /* Table Row Hover Effect */
    .table-dark tbody tr:hover {
        background-color: #444 !important;
    }

    /* Action Links Styling */
    .action-link {
        color: #d32f2f;
        text-decoration: none;
        font-weight: bold;
    }

        .action-link:hover {
            color: #b71c1c;
            text-decoration: underline;
        }
</style>
