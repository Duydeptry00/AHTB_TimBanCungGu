@model IEnumerable<AHTB_TimBanCungGu_API.Models.UuDai>

@{
    ViewData["Title"] = "Danh sách ưu đãi";
    Layout = "~/Areas/Admin/Views/SharedAdmin/_LayoutAdmin.cshtml";
}
<style>
    /* Nền đen cho toàn bộ vùng chứa */
    .background-dark {
        background-color: #0d1b2a;
        padding: 20px;
        margin: 15px;
        border-radius: 5px;
        position: relative; /* To position the button relative to this container */
    }

    h1 {
        color: #fff;
        font-size: 2rem;
        margin-bottom: 20px;
    }
    /* Nút Tạo Mới - Vị trí góc phải */
    #addNewBtn {
        background-color: #198754; /* Dark green */
        color: #ffffff;
        border: none;
        border-radius: 5px; /* Slightly rounded corners */
        padding: 0.5em 1em;
        display: inline-flex;
        align-items: center;
        transition: background-color 0.3s ease, transform 0.2s ease;
        position: absolute; /* Absolute positioning */
        top: 20px; /* Distance from the top */
        right: 20px; /* Distance from the right */
    }

       

        #addNewBtn i {
            margin-right: 0.5em; /* Space between the icon and text */
        }

        #addNewBtn:focus {
            outline: none;
            box-shadow: 0 0 10px rgba(102, 140, 255, 0.7); /* Focus effect */
        }

    /* Bảng */
    .table-dark {
        background-color: #1f1f1f;
        border-color: #333;
        color: #e0e0e0;
        border-collapse: collapse; /* Đảm bảo viền không bị trùng lặp */
       
    }

    /* Tiêu đề bảng nổi bật với icon và viền dưới */
    .table-header {
        background-color: #333;
        color: #fff;
        font-weight: bold;
        font-size: 1.2rem;
        text-align: center;
        padding: 10px;
        border-right: 2px solid #fff; /* Viền phải giữa các tiêu đề */
        
    }

        .table-header:last-child {
            border-right: none; /* Bỏ viền phải của tiêu đề cuối cùng */
        }

        .table-header i {
            margin-right: 8px;
        }

    /* Các dòng dữ liệu */
    .table-dark tbody tr:nth-child(even) {
        background-color: #262626;
    }

    .table-dark tbody tr:nth-child(odd) {
        background-color: #1f1f1f;
    }

    .table-dark tbody tr:hover {
        background-color: #444 !important;
        cursor: pointer;
    }

    /* Dữ liệu trong bảng */
    .table-dark td {
        padding: 10px;
        text-align: center;
        border-right: 2px solid #333; /* Viền phải của dữ liệu */
        border-bottom: 2px solid #333; /* Viền dưới giữa các dòng dữ liệu */
        border-right: 2px solid #fff;
    }

        .table-dark td:last-child {
            border-right: none; /* Bỏ viền phải của ô cuối cùng */
        }

    /* Hình ảnh trong bảng */
    .table-image {
        width: 200px;
        height: 300px;
        object-fit: cover;
       
        transition: transform 0.3s ease, border 0.3s ease;
    }

       

    /* Link hành động */
    .action-link {
        color: #ff5252;
        text-decoration: none;
        font-weight: bold;
        padding: 5px 10px;
        border-radius: 3px;
        transition: all 0.2s ease;
    }

        .action-link:hover {
            background-color: #b71c1c;
            color: white;
            text-decoration: none;
        }

    /* Flexbox container for the button */
    .button-container {
        display: flex;
        justify-content: flex-end;
        margin-bottom: 20px; /* Space below the button */
    }
</style>

<div class="background-dark">
    <h1>Ưu đãi</h1>
    <div class="button-container">
        <a asp-action="Create" class="btn btn-success" id="addNewBtn" data-bs-toggle="tooltip" title="Thêm Mới Phim">
            <i class="fas fa-plus"></i> Thêm Mới
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-dark table-bordered">
            <thead>
                <tr>
                    <th class="table-header"><i class="fas fa-gift"></i> Tên Ưu Đãi</th>
                    <th class="table-header"><i class="fas fa-calendar-day"></i> Ngày Ưu Đãi</th>
                    <th class="table-header"><i class="fas fa-percent"></i> Phần Trăm</th>
                    <th class="table-header"><i class="fas fa-image"></i> Hình Ảnh</th>
                    <th class="table-header"><i class="fas fa-cogs"></i></th> <!-- Thêm icon cogs cho cột "Sửa" -->
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.TenUuDai)</td>
                        <td>@Html.DisplayFor(modelItem => item.NgayUuDai)</td>
                        <td>@Html.DisplayFor(modelItem => item.PhanTram) %</td>
                        <td>
                            <img src="~/Uploads/@item.Hinh" alt="Ảnh ưu đãi" class="table-image" />
                        </td>

                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.IdUuDai" class="btn btn-primary btn-sm me-1">
                                <i class="fas fa-edit"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
