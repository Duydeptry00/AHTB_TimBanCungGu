@model IEnumerable<AHTB_TimBanCungGu_API.Models.HoaDon>

@{
    ViewData["Title"] = "Quản lý Hóa Đơn";
    Layout = "~/Areas/Admin/Views/SharedAdmin/_LayoutAdmin.cshtml";
}

<div class="background-dark">
    <h1>Quản lý Hóa Đơn</h1>
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th class="table-header"><i class="fas fa-user"></i> Username</th>
                    <th class="table-header"><i class="fas fa-gift"></i> Gói</th>
                    <th class="table-header"><i class="fas fa-calendar-alt"></i> Ngày hết hạn</th>
                    <th class="table-header"><i class="fas fa-dollar-sign"></i> Tổng tiền</th>
                    <th class="table-header"><i class="fas fa-credit-card"></i> Phương thức thanh toán</th>
                    <th class="table-header"><i class="fas fa-info-circle"></i> Trạng thái</th>
                    <th class="table-header"><i class="fas fa-calendar-check"></i> Ngày thanh toán</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.User.UserName)</td>
                        <td>@Html.DisplayFor(modelItem => item.GoiPremium)</td>
                        <td>@item.NgayHetHan.ToString("MM/dd/yyyy")</td>
                        <td>@String.Format("{0:N0}", item.TongTien) VNĐ</td>
                        <td>@Html.DisplayFor(modelItem => item.PhuongThucThanhToan)</td>
                        <td>@Html.DisplayFor(modelItem => item.TrangThai)</td>
                        <td>@item.NgayThanhToan.ToString("MM/dd/yyyy")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    /* Nền tối cho toàn bộ vùng chứa */
    .background-dark {
        background-color: #0d2636; /* Nền tối xanh thẫm */
        padding: 20px;
        margin: 15px;
        border-radius: 5px;
    }

    /* Tiêu đề trang */
    h1 {
        color: #fff;
        font-size: 2rem;
        margin-bottom: 20px;
    }

    /* Bảng */
    .table-dark {
        background-color: #1f2a38; /* Màu nền bảng tối xanh thẫm */
        color: #fff; /* Chữ trắng */
        border-collapse: collapse;
        width: 100%;
    }

    /* Tiêu đề bảng nổi bật với viền trên/bottom */
    .table-header {
        background-color: #333333; /* Nền tiêu đề màu xám đen */
        color: #fff; /* Màu chữ trắng */
        font-weight: bold;
        font-size: 1.1rem;
        text-align: center;
        padding: 12px;
        border-top: 2px solid #fff; /* Viền trên của tiêu đề */
        border-bottom: 2px solid #fff; /* Viền dưới của tiêu đề */
    }

    /* Dữ liệu trong bảng */
    .table-dark td {
        padding: 12px;
        text-align: center;
        border-right: 2px solid #333; /* Viền phải cho mỗi ô */
        border-bottom: 2px solid #333; /* Viền dưới cho mỗi ô */
    }

        .table-dark td:last-child {
            border-right: none; /* Bỏ viền phải cho cột cuối */
        }

    /* Các dòng dữ liệu */
    .table-dark tbody tr:nth-child(even) {
        background-color: #2a3b4b; /* Màu nền cho dòng chẵn */
    }

    .table-dark tbody tr:nth-child(odd) {
        background-color: #1f2a38; /* Màu nền cho dòng lẻ */
    }

    .table-dark tbody tr:hover {
        background-color: #354a60 !important; /* Màu nền khi hover */
        cursor: pointer;
        transition: background-color 0.3s ease; /* Hiệu ứng chuyển màu mượt mà khi hover */
    }
    td{
        color: #fff;
    }
    /* Liên kết hành động */
    .action-link {
        color: #fff; /* Màu chữ trắng */
        text-decoration: none;
        font-weight: bold;
        padding: 5px 10px;
        border-radius: 3px;
        transition: all 0.2s ease;
    }

        .action-link:hover {
            background-color: #ff6f61; /* Màu nền khi hover */
            color: white;
            text-decoration: none;
        }
</style>
