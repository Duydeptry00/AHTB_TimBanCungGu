@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Trang Chủ</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <!-- FontAwesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />

    <!-- Custom CSS -->
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #444343;
            margin: 0;
            padding: 0;
            overflow-x: hidden;
            overflow-y: hidden;
        }

        .layout-container {
            display: flex;
            height: 100vh;
            flex-direction: row;
            position: relative;
            transition: margin-left 0.3s ease;
            overflow: hidden;
        }

        #sidebar {
            background-color: #1f1f1f;
            width: 300px;
            height: 100%;
            position: fixed;
            left: 0;
            top: 0;
            transition: transform 0.1s ease;
            z-index: 100;
        }

            #sidebar.closed {
                transform: translateX(-100%);
            }

            #sidebar .nav-link {
                color: #e0e0e0;
                padding: 10px;
                white-space: nowrap;
                align-items: center;
            }

                #sidebar .nav-link.active,
                #sidebar .nav-link:hover {
                    background-color: #343a40;
                    color: #fff;
                }

            #sidebar h1 {
                color: red;
                font-size: 24px;
                padding: 19px;
                text-align: center;
                margin-bottom: 0px;
            }

        #content-wrapper {
            color: #F31313;
            width: 100%;
            transition: margin-left 0.1s ease;
            padding-left: 300px;
        }

        #navbar {
            display: flex;
            align-items: center;
            background-color: #343a40;
            padding: 10px;
            width: 100%;
            z-index: 101;
        }

            #navbar form {
                display: flex;
                flex-grow: 1;
                margin-right: 10px;
            }

            #navbar input {
                width: 25%;
            }

        #userDropdown {
            background-color: transparent;
            border: none;
            color: white;
            font-size: 20px;
        }

        #toggleSidebar {
            background: none;
            border: none;
            color: white;
            font-size: 24px;
            cursor: pointer;
        }

        #sidebar.closed ~ #content-wrapper {
            padding-left: 0;
        }

        .sidebar-sticky {
            display: flex;
            flex-direction: column;
            height: 88%;
        }

        .nav-item.mt-auto {
            margin-top: auto;
        }

    </style>
</head>

<body>
    <div class="layout-container">
        <!-- Sidebar -->
        <nav id="sidebar">
            <h1>Anh Hùng Tranh Bá</h1>
            <div class="sidebar-sticky">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Admin" asp-controller="NhanVienss" asp-action="index">
                            <i class="fas fa-user-cog"></i>
                            <span>Quản Lý Nhân Viên</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Admin" asp-controller="QuanLyNguoiDungs" asp-action="index">
                            <i class="fas fa-user-circle"></i>
                            <span>Lịch Sử Khóa</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Admin" asp-controller="BaoCaoNguoiDungs" asp-action="index">
                            <i class="fas fa-user-circle"></i>
                            <spanQuản Lý Báo Cáo</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Admin" asp-controller="HoaDons" asp-action="index">
                            <i class="fas fa-user-circle"></i>
                            <spanQuản Lý Hóa Đơn</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Admin" asp-controller="QuanLyDanhMuc" asp-action="index">
                            <i class="fas fa-th-list"></i>
                            <span>Quản Lý Danh Mục</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Admin" asp-controller="QuanLyPhims" asp-action="index">
                            <i class="fas fa-film"></i>
                            <span>Quản Lý Phim</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Admin" asp-controller="Quyenss" asp-action="index">
                            <i class="fas fa-key"></i>
                            <span>Quản Lý Phân Quyền</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Admin" asp-controller="DoanhThus" asp-action="index">
                            <i class="fas fa-chart-line"></i>
                            <span>Doanh Thu</span>
                        </a>
                    </li>
                </ul>
            </div>
            <ul class="nav flex-column">
                <li class="nav-item mt-auto">
                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Logout">
                        <i class="fas fa-sign-out-alt"></i>
                        <span>Đăng Xuất</span>
                    </a>
                </li>
            </ul>

        </nav>

        <!-- Main content area -->
        <div id="content-wrapper">
            <div id="navbar" class="d-flex align-items-center">
                <button id="toggleSidebar" class="btn btn-dark me-3">
                    <i class="fas fa-bars"></i>
                </button>
                <form class="d-flex flex-grow-1">
                    <input class="form-control me-2" type="search" placeholder="Tìm kiếm" aria-label="Search">
                    <button class="btn btn-outline-light" type="submit"><i class="fas fa-search"></i></button>
                </form>

                <!-- Wrapper for the bell icon and user avatar -->
                <div class="d-flex ms-3 align-items-center">
                    <!-- Bell Icon with dropdown -->
                    <div class="dropdown me-3">
                        <button class="btn btn-outline-light dropdown-toggle" type="button" id="bellDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-bell"></i>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="bellDropdown">
                            <li><a class="dropdown-item" href="#">Thông báo 1</a></li>
                            <li><a class="dropdown-item" href="#">Thông báo 2</a></li>
                            <li><a class="dropdown-item" href="#">Thông báo 3</a></li>
                        </ul>
                    </div>

                    <!-- Avatar Image -->
                    <div class="dropdown">
                        <button class="btn btn-outline-light dropdown-toggle" type="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                           Xin Chào! @HttpContextAccessor.HttpContext.Session.GetString("TempUserName")
                            <img src="@Url.Content($"~/images/{HttpContextAccessor.HttpContext.Session.GetString("TempUserName") ?? "defaultAvatar"}.jpg")"
                                 alt="Avatar"
                                 class="rounded-circle"
                                 style="width: 30px; height: 30px;"
                                 onerror="this.onerror=null; this.src='@Url.Content("~/images/defaultAvatar.jpg")';">
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                            <li><a class="dropdown-item" href="#">Tài khoản</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Logout">Đăng xuất</a></li>
                        </ul>
                    </div>
                </div>
            </div>



            <main>
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- JavaScript -->
    <script>
        const toggleSidebarButton = document.getElementById('toggleSidebar');
        const sidebar = document.getElementById('sidebar');
        const contentWrapper = document.getElementById('content-wrapper');

        // Toggle the sidebar visibility
        toggleSidebarButton.addEventListener('click', function () {
            sidebar.classList.toggle('closed');
        });

    </script>

    <!-- Bootstrap 5 JS, Popper.js, and FontAwesome -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
