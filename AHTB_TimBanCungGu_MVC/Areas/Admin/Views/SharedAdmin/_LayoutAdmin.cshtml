@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{
    string UserName = HttpContextAccessor.HttpContext.Session.GetString("TempUserName") ?? null;
    string Avt = HttpContextAccessor.HttpContext.Session.GetString("Avt") ?? null;
    string User = HttpContextAccessor.HttpContext.Session.GetString("User") ?? null;
    var tempRole = HttpContextAccessor.HttpContext.Session.GetString("TempRole") ?? null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Trang Chủ</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.0.0/dist/jquery.validate.unobtrusive.min.js"></script>

    <!-- FontAwesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />

    <!-- Custom CSS -->
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #444343;
            margin: 0;
            padding: 0;
            height: auto; /* Thay đổi từ 100% thành auto */
            overflow-y: auto;
        }


        .layout-container {
            display: flex;
            height: auto;
            flex-direction: row;
            position: relative;
            transition: margin-left 0.3s ease;
            overflow: hidden;
            overflow-y: auto;
        }

        #sidebar {
            background-color: #1f1f1f;
            width: 300px;
            height: 100%;
            position: fixed;
            left: 0;
            top: 0;
            transition: transform 0.1s ease;
            z-index: 100;
        }

            #sidebar.closed {
                transform: translateX(-100%);
            }

            #sidebar .nav-link {
                color: #e0e0e0;
                padding: 10px;
                white-space: nowrap;
                align-items: center;
            }

        .nav-link:hover {
            background-color: #007bff; /* Màu nền khi người dùng hover */
            color: #fff; /* Màu chữ khi người dùng hover */
        }

        .nav-link {
            transition: background-color 0.3s, color 0.3s; /* Thêm hiệu ứng chuyển màu */
        }


        #sidebar h1 {
            color: red;
            font-size: 24px;
            padding: 19px;
            text-align: center;
            margin-bottom: 0px;
        }

        #content-wrapper {
            color: #F31313;
            width: 100%;
            transition: margin-left 0.1s ease;
            padding-left: 300px;
        }

        .collapse {
            display: none;
        }

            .collapse.show {
                display: block;
            }

        #navbar {
            display: flex;
            align-items: center;
            background-color: #343a40;
            padding: 10px;
            width: 100%;
            z-index: 101;
        }

            #navbar form {
                display: flex;
                flex-grow: 1;
                margin-right: 10px;
            }

            #navbar input {
                width: 25%;
            }

        #userDropdown {
            background-color: transparent;
            border: none;
            color: white;
            font-size: 20px;
        }

        #toggleSidebar {
            background: none;
            border: none;
            color: white;
            font-size: 24px;
            cursor: pointer;
        }

        #sidebar.closed ~ #content-wrapper {
            padding-left: 0;
        }

        .sidebar-sticky {
            display: flex;
            flex-direction: column;
            height: 88%;
        }

        .nav-item.mt-auto {
            margin-top: auto;
        }

        .toggle-icon {
            transition: transform 0.3s ease;
        }

        #sidebar.closed {
            transform: translateX(-100%); /* Sidebar đóng */
        }

        #content-wrapper {
            transition: padding-left 0.3s ease; /* Chuyển động mượt mà khi thay đổi padding */
            padding-left: 300px; /* Mặc định khi sidebar mở */
        }

            #content-wrapper.sidebar-closed {
                padding-left: 0; /* Khi sidebar đóng */
            }

    </style>
</head>

<body>
    <div class="layout-container">
        <!-- Sidebar -->
        <nav id="sidebar">
            <h1>Anh Hùng Tranh Bá</h1>
            <div class="sidebar-sticky">
                @if (@HttpContextAccessor.HttpContext.Session.GetString("UserType") == "Admin")
                {
                    <ul class="nav flex-column">
                        <!-- Nhân Viên và Phân Quyền -->
                        <li class="nav-item">
                            <a class="nav-link active" href="#" data-bs-toggle="collapse" data-bs-target="#employeeManagement" aria-expanded="true">
                                <i class="fas fa-users-cog"></i>
                                <span>Quản Lý Nhân Sự</span>
                                <i class="fas fa-minus float-end toggle-icon"></i>
                            </a>
                            <ul id="employeeManagement" class="collapse show">
                                <li>
                                    <a class="nav-link active" asp-area="Admin" asp-controller="NhanVienss" asp-action="index">
                                        <i class="fas fa-users-cog"></i> Quản Lý Nhân Viên
                                    </a>
                                </li>
                                <li>
                                    <a class="nav-link" asp-area="Admin" asp-controller="Quyenss" asp-action="index">
                                        <i class="fas fa-user-shield"></i> Quản Lý Phân Quyền
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <!-- Quản Lý Người Dùng -->
                        <li class="nav-item">   
                            <a class="nav-link" href="#" data-bs-toggle="collapse" data-bs-target="#userManagement" aria-expanded="true">
                                <i class="fas fa-users"></i>
                                <span>Quản Lý Người Dùng</span>
                                <i class="fas fa-minus float-end toggle-icon"></i>
                            </a>
                            <ul id="userManagement" class="collapse show">
                                <li>
                                    <a class="nav-link" asp-area="Admin" asp-controller="thongtincanhans" asp-action="index">
                                        <i class="fas fa-user"></i> Thông Tin Người Dùng
                                    </a>
                                </li>
                                <li>
                                    <a class="nav-link" asp-area="Admin" asp-controller="QuanLyNguoiDungs" asp-action="index">
                                        <i class="fas fa-history"></i> Lịch Sử Khóa
                                    </a>
                                </li>
                            </ul>
                        </li>
                            
                        <!-- Quản Lý Báo Cáo và Hóa Đơn -->
                        <li class="nav-item">
                            <a class="nav-link" href="#" data-bs-toggle="collapse" data-bs-target="#reportManagement" aria-expanded="true">
                                <i class="fas fa-clipboard"></i>
                                <span>Quản Lý Báo Cáo & Hóa Đơn</span>
                                <i class="fas fa-minus float-end toggle-icon"></i>
                            </a>
                            <ul id="reportManagement" class="collapse show">
                                <li>
                                    <a class="nav-link" asp-area="Admin" asp-controller="BaoCaoNguoiDungs" asp-action="index">
                                        <i class="fas fa-clipboard-list"></i> Quản Lý Báo Cáo
                                    </a>
                                </li>
                                <li>
                                    <a class="nav-link" asp-area="Admin" asp-controller="HoaDons" asp-action="index">
                                        <i class="fas fa-file-invoice-dollar"></i> Quản Lý Hóa Đơn
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <!-- Quản Lý Nội Dung -->
                        <li class="nav-item">
                            <a class="nav-link" href="#" data-bs-toggle="collapse" data-bs-target="#contentManagement" aria-expanded="true">
                                <i class="fas fa-film"></i>
                                <span>Quản Lý Nội Dung</span>
                                <i class="fas fa-minus float-end toggle-icon"></i>
                            </a>
                            <ul id="contentManagement" class="collapse show">
                                <li>
                                    <a class="nav-link" asp-area="Admin" asp-controller="QuanLyPhims" asp-action="index">
                                        <i class="fas fa-film"></i> Quản Lý Phim
                                    </a>
                                </li>
                                <li>
                                    <a class="nav-link" asp-area="Admin" asp-controller="Phans" asp-action="index">
                                        <i class="fas fa-layer-group"></i> Quản Lý Phần
                                    </a>
                                </li>
                            </ul>
                        </li>

                       
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-controller="DoanhThus" asp-action="index">
                                <i class="fas fa-chart-bar"></i>
                                <span>Doanh Thu</span>
                            </a>
                        </li>
                    </ul>
                }
                else if (@HttpContextAccessor.HttpContext.Session.GetString("UserType") != "Admin" && tempRole != null)
                {
                    if (tempRole.Contains("Quản Lý Người Dùng"))
                    {
                        <li>
                            <a class="nav-link" asp-area="Admin" asp-controller="thongtincanhans" asp-action="index">
                                <i class="fas fa-user"></i> Thông Tin Người Dùng
                            </a>
                        </li>
                        <li>
                            <a class="nav-link" asp-area="Admin" asp-controller="QuanLyNguoiDungs" asp-action="index">
                                <i class="fas fa-history"></i> Lịch Sử Khóa
                            </a>
                        </li>
                    }
                  
                    if (tempRole.Contains("Quản Lý Doanh Thu"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-controller="DoanhThus" asp-action="index">
                                <i class="fas fa-chart-bar"></i>
                                <span>Doanh Thu</span>
                            </a>
                        </li>
                    }
                   
                    if (tempRole.Contains("Quản Lý Báo Cáo"))
                    {
                        <li>
                            <a class="nav-link" asp-area="Admin" asp-controller="BaoCaoNguoiDungs" asp-action="index">
                                <i class="fas fa-clipboard-list"></i> Quản Lý Báo Cáo
                            </a>
                        </li>
                    }
                }

                else
                {
                    <script type="text/javascript">
                        // Hiển thị thông báo SweetAlert2 với nút OK
                        Swal.fire({
                            title: 'Bạn sẽ bị đăng xuất!',
                            text: 'Hiện tại bạn chưa được cấp quyền để sử dụng hệ thống!',
                            icon: 'warning',
                            showConfirmButton: true,
                            confirmButtonText: 'OK'
                        }).then((result) => {
                            if (result.isConfirmed) {
                                // Nếu người dùng nhấn "OK", chuyển hướng đến action Logout
                                window.location.href = '@Url.Action("Logout", "Home", new { area = "" })';
                            }
                        });
                    </script>
                }
            </div>
            <ul class="nav flex-column">
                <li class="nav-item mt-auto">
                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Logout">
                        <i class="fas fa-sign-out-alt"></i>
                        <span>Đăng Xuất</span>
                    </a>
                </li>
            </ul>
        </nav>
        <!-- Main content area -->
        <div id="content-wrapper">
            <div id="navbar" class="d-flex align-items-center">
                <button id="toggleSidebar" class="btn btn-dark me-3">
                    <i class="fas fa-bars"></i>
                </button>
                <form class="d-flex flex-grow-1">
                    <input class="form-control me-2" type="search" placeholder="Tìm kiếm" aria-label="Search">
                    <button class="btn btn-outline-light" type="submit"><i class="fas fa-search"></i></button>
                </form>

                <!-- Wrapper for the bell icon and user avatar -->
                <div class="d-flex ms-3 align-items-center">
                    <!-- Bell Icon with dropdown -->
                    <div class="dropdown me-3">
                        <button class="btn btn-outline-light dropdown-toggle" type="button" id="bellDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-bell"></i>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="bellDropdown">
                            <li><a class="dropdown-item" href="#">Thông báo 1</a></li>
                            <li><a class="dropdown-item" href="#">Thông báo 2</a></li>
                            <li><a class="dropdown-item" href="#">Thông báo 3</a></li>
                        </ul>
                    </div>
                    <!-- Avatar Image -->               
                        <div class="dropdown">
                            <button class="btn btn-outline-light dropdown-toggle" type="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                Xin Chào! @User
                                <img src="@Url.Content($"~/Uploads/{Avt}")"
                                     alt="Avatar"
                                     class="rounded-circle"
                                     style="width: 30px; height: 30px;"
                                     onerror="this.onerror=null; this.src='@Url.Content("~/Uploads/AnhCN.jpg")';">
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                <li><a class="dropdown-item" asp-area="Admin" asp-controller="Thongtin" asp-action="ThongTinNV" asp-route-id="@UserName">Tài khoản</a></li>
                                <li><hr class="dropdown-divider"></li>

                                @if (@HttpContextAccessor.HttpContext.Session.GetString("UserType") != "Admin")
                                {
                                    <li><a class="dropdown-item" asp-area="" asp-controller="LoginvsRegister" asp-action="DoiMatKhaucuNV">Đổi mật khẩu</a></li>
                                }

                                <li><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Logout">Đăng xuất</a></li>
                            </ul>
                     </div>
                </div>
            </div>
            <main>
                @RenderBody()
            </main>
        </div>
    </div>
    <!-- JavaScript -->
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const toggleSidebarButton = document.getElementById('toggleSidebar');
            const sidebar = document.getElementById('sidebar');
            const contentWrapper = document.getElementById('content-wrapper');

            // Tự động đóng mở sidebar khi nhấn nút toggle
            toggleSidebarButton.addEventListener('click', function () {
                // Kiểm tra xem sidebar có class 'closed' hay không
                if (sidebar.classList.contains('closed')) {
                    // Nếu sidebar đang đóng (có class 'closed'), mở lại
                    sidebar.classList.remove('closed');
                    contentWrapper.style.paddingLeft = '300px';  // Mở sidebar, thêm padding cho nội dung
                } else {
                    // Nếu sidebar đang mở, đóng lại
                    sidebar.classList.add('closed');
                    contentWrapper.style.paddingLeft = '0';  // Đóng sidebar, bỏ padding cho nội dung
                }
            });

            // Xử lý khi nhấn vào các liên kết có data-bs-toggle="collapse"
            const toggleLinks = document.querySelectorAll('[data-bs-toggle="collapse"]');
            toggleLinks.forEach(link => {
                const icon = link.querySelector('.toggle-icon'); // Tìm biểu tượng thay đổi

                link.addEventListener('click', (e) => {
                    const targetId = link.getAttribute('data-bs-target');
                    const target = document.querySelector(targetId);

                    // Kiểm tra nếu menu đang mở (class "show")
                    if (target.classList.contains('show')) {
                        // Nếu đã mở, đóng menu và thay đổi biểu tượng
                        target.classList.remove('show');
                        icon.classList.remove('fa-minus');
                        icon.classList.add('fa-plus');
                    } else {
                        // Nếu chưa mở, mở menu và thay đổi biểu tượng
                        target.classList.add('show');
                        icon.classList.remove('fa-plus');
                        icon.classList.add('fa-minus');
                    }
                });
            });

            // Xử lý thay đổi lớp "active" cho các liên kết trong sidebar khi nhấn
            const links = document.querySelectorAll('.nav-link');
            links.forEach(link => {
                link.addEventListener('click', function () {
                    links.forEach(item => {
                        item.classList.remove('active');
                    });
                    link.classList.add('active');
                });
            });

            $(document).ready(function () {
                // Sử dụng AJAX để tải nội dung mà không làm reload toàn bộ trang
                $(document).on('click', '.nav-link', function (e) {
                    // Kiểm tra nếu đây không phải là liên kết đăng xuất
                    if ($(this).attr('href') === '/Home/Logout') {
                        return;  // Không làm gì, để liên kết đăng xuất hoạt động bình thường
                    }

                    e.preventDefault();  // Ngừng hành động mặc định (reload toàn bộ trang)
                    var url = $(this).attr('href');  // Lấy URL của liên kết đã click

                    // Sử dụng AJAX để lấy nội dung
                    $.ajax({
                        url: url,
                        type: 'GET',
                        success: function (response) {
                            // Tải nội dung từ phản hồi vào phần <main>
                            $('main').html($(response).find('main').html());
                            // Cập nhật lịch sử trình duyệt (tùy chọn)
                            history.pushState(null, '', url);
                        },
                        error: function () {
                            alert('Lỗi khi tải nội dung.');
                        }
                    });
                });

                // Xử lý khi người dùng sử dụng nút quay lại hoặc tiếp theo của trình duyệt
                window.onpopstate = function () {
                    var url = location.href;  // Lấy URL hiện tại
                    $.ajax({
                        url: url,
                        type: 'GET',
                        success: function (response) {
                            // Cập nhật nội dung của phần <main> khi người dùng quay lại
                            $('main').html($(response).find('main').html());
                        }
                    });
                };
            });

    </script>

    <!-- Chỉ tải jQuery một lần -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Bootstrap 5 JS, Popper.js, and FontAwesome -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
