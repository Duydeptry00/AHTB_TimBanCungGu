<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <!-- FontAwesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />

    <!-- Custom CSS -->
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #444343;
        }

        /* Navbar */
        .navbar {
            position: fixed; /* Navbar cố định ở trên */
            top: 0;
            width: 100%;
            z-index: 1020; /* Đảm bảo navbar ở trên cùng */
        }

        /* Sidebar */
        #sidebar {
            background-color: #1f1f1f;
            height: 100vh;
            overflow-y: auto;
            width: 42px;
            transition: width 0.3s ease;
            position: fixed; /* Sidebar luôn cố định bên trái */
            top: 56px; /* Đặt dưới navbar (56px là chiều cao của navbar) */
            left: 0;
            z-index: 100;
        }

            #sidebar:hover {
                width: 250px;
            }

            /* Ẩn văn bản khi sidebar thu gọn */
            #sidebar .nav-link span {
                display: none; /* Ẩn phần văn bản */
                margin-left: 10px;
            }

            /* Hiển thị văn bản khi sidebar mở rộng */
            #sidebar:hover .nav-link span {
                display: inline; /* Hiển thị lại văn bản */
            }

            #sidebar .nav-link {
                color: #e0e0e0;
                padding: 10px;
                white-space: nowrap;
                align-items: center;
            }

                #sidebar .nav-link.active {
                    background-color: #343a40;
                    color: #fff;
                }

                #sidebar .nav-link:hover {
                    background-color: #343a40;
                    color: #fff;
                }

        .navbar-brand {
/*             color: #F31313; */
            font-size: 1.5rem; /* Tùy chỉnh kích thước chữ */
            font-weight: bold; /* Tùy chỉnh trọng số chữ */
            position: relative;
            padding: 5px;
            transition: color 0.3s ease;
        }

            .navbar-brand::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                border: 2px solid transparent;
                border-radius: 4px;
                transition: border-color 0.3s ease;
                z-index: -1; /* Đặt viền phía sau chữ */
            }

        /* Main Content */
        #content-wrapper {
            color: #F31313;
            min-height: 100vh;
            margin-left: 62px;
            margin-top: 70px; /* Đảm bảo nội dung không bị navbar che */
            transition: margin-left 0.3s ease, width 0.3s ease;
            width: calc(100% - 70px); /* Chiều rộng của nội dung theo chiều rộng sidebar */
        }


        /* Style for the logout button */
        #logout-btn {
            position: relative;
            display: inline-flex;
            align-items: center;
            overflow: hidden; /* Hide overflowing content */
            padding: 0 10px; /* Add padding to accommodate the text */
            white-space: nowrap; /* Prevent text from wrapping */
            transition: width 0.3s ease; /* Smooth transition for width change */
            width: 42px; /* Initial width */
        }

        /* Hide the text by default */
        .logout-text {
            opacity: 0;
            transform: translateX(-20px); /* Move the text slightly out of view */
            margin-left: 5px; /* Add space between icon and text */
            transition: opacity 0.3s ease, transform 0.3s ease; /* Smooth transition */
            white-space: nowrap; /* Prevent text from wrapping */
        }

        /* Show the text and expand the button on hover */
        #logout-btn:hover {
            width: 124px; /* Adjust this value based on the width needed for text */
        }

            #logout-btn:hover .logout-text {
                opacity: 1;
                transform: translateX(0); /* Move the text into view */
            }

        #logout-btn i {
            margin-right: 5px; /* Add space between icon and text */
        }

    </style>
</head>

<body>

    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" style="color:red"="#">Anh Hùng Tranh Bá</a>
            <button class="navbar-toggler" type="button">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="btn btn-danger" href="@Url.Action("Logout", "Account")" id="logout-btn">
                            <i class="fas fa-sign-out-alt"></i>
                            <span class="logout-text">Đăng xuất</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Sidebar and Main Content -->
    <div class="container-fluid">
        <!-- Sidebar -->
        <nav id="sidebar" class="col-md-3 col-lg-2 d-md-block sidebar">
            <div class="sidebar-sticky">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link active" asp-area="Admin" asp-controller="NhanVienss" asp-action="Index">
                            <i class="fas fa-users"></i>
                            <span>Quản lý nhân viên</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Admin" asp-controller="ThongTinCaNhans" asp-action="Index">
                            <i class="fas fa-info-circle"></i>
                            <span>Thông tin người dùng</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Admin" asp-controller="DoanhThus" asp-action="Index">
                            <i class="fas fa-info-circle"></i>
                            <span>Doanh thu</span>
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <!-- Main Content -->
        <main id="content-wrapper" class="col-md-9 col-lg-10 px-md-4">
            @RenderBody()
        </main>
    </div>

    <!-- JavaScript to adjust main content based on sidebar state -->
    <script>
        const sidebar = document.getElementById('sidebar');
        const contentWrapper = document.getElementById('content-wrapper');

        sidebar.addEventListener('mouseenter', function () {
            contentWrapper.style.marginLeft = '250px'; // Điều chỉnh lề khi sidebar mở rộng
            contentWrapper.style.width = 'calc(100% - 250px)'; // Giảm chiều rộng nội dung
        });

        sidebar.addEventListener('mouseleave', function () {
            contentWrapper.style.marginLeft = '62px'; // Trở về lề ban đầu khi sidebar thu gọn
            contentWrapper.style.width = 'calc(100% - 70px)'; // Giãn chiều rộng nội dung
        });
    </script>

    <!-- Bootstrap 5 JS, Popper.js, and FontAwesome -->
@*     <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-8pz1uopgHzZG7HEr5jJ8vhJahhGJ8smxN2k4y+5eO9NE9+p7dP4J+1p0I5" crossorigin="anonymous">
    </script> *@

</body>

</html>
