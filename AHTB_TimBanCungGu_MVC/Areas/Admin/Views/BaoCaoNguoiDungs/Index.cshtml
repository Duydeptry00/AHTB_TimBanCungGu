@model IEnumerable<AHTB_TimBanCungGu_API.Models.BaoCaoNguoiDung>

@{
    ViewData["Title"] = "Quản Lý Báo Cáo";
    Layout = "~/Areas/Admin/Views/SharedAdmin/_LayoutAdmin.cshtml";
}

<div class="background-dark">
    <h1>Quản lý Báo Cáo</h1>
    <div class="table-responsive">
        <table class="table table-striped table-bordered text-center">
            <thead>
                <tr>
                    <th class="table-header"><i class="fas fa-user-tag"></i> Người báo cáo</th>
                    <th class="table-header"><i class="fas fa-user-slash"></i> Người bị báo cáo</th>
                    <th class="table-header"><i class="fas fa-exclamation-circle"></i> Lý do báo cáo</th>
                    <th class="table-header"><i class="fas fa-calendar-alt"></i> Ngày báo cáo</th>
                    <th class="table-header"><i class="fas fa-info-circle"></i> Trạng thái</th>
                    <th class="table-header"><i class="fas fa-cogs"></i> Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.NguoiBaoCaoUser.UserName)</td>
                        <td>@Html.DisplayFor(modelItem => item.DoiTuongBaoCaoUser.UserName)</td>
                        <td>@Html.DisplayFor(modelItem => item.LyDoBaoCao)</td>
                        <td>@item.NgayBaoCao.ToString("dd/MM/yyyy")</td>
                        <td>
                            @if (item.TrangThai == "Đã xử lý")
                            {
                                <span class="text-success font-weight-bold">@item.TrangThai</span>
                            }
                            else
                            {
                                <span class="text-warning font-weight-bold">Chờ xử lý</span>
                            }
                        </td>
                        <td>
                            @if(item.TrangThai == "Đã xử lý")
                            {
                                <button class="btn btn-success btn-sm btn-confirm" data-id="@item.IDReport" disabled>
                                    Xác nhận
                                </button>
                            }
                            else
                            {
                                <button class="btn btn-success btn-sm btn-confirm" data-id="@item.IDReport">
                                    Xác nhận
                                </button>
                            }

                        </td>
                 </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    /* Nền tối cho toàn bộ vùng chứa */
    .background-dark {
        background-color: #0d2636; /* Nền tối xanh thẫm */
        padding: 20px;
        margin: 15px;
        border-radius: 5px;
    }

    /* Tiêu đề trang */
    h1 {
        color: #fff;
        font-size: 2rem;
        margin-bottom: 20px;
    }

    td {
        color: #fff;
    }
    /* Bảng */
    .table-dark {
        background-color: #1f2a38; /* Màu nền bảng tối xanh thẫm */
        color: #fff; /* Chữ trắng */
        border-collapse: collapse;
        width: 100%;
    }

    /* Tiêu đề bảng nổi bật với viền trên/bottom */
    .table-header {
        background-color: #333333; /* Nền tiêu đề màu xám đen */
        color: #fff; /* Màu chữ trắng */
        font-weight: bold;
        font-size: 1.1rem;
        text-align: center;
        padding: 12px;
        border-top: 2px solid #fff; /* Viền trên của tiêu đề */
        border-bottom: 2px solid #fff; /* Viền dưới của tiêu đề */
    }

    /* Dữ liệu trong bảng */
    .table-dark td {
        padding: 12px;
        text-align: center;
        border-right: 2px solid #333; /* Viền phải cho mỗi ô */
        border-bottom: 2px solid #333; /* Viền dưới cho mỗi ô */
    }

        .table-dark td:last-child {
            border-right: none; /* Bỏ viền phải cho cột cuối */
        }

    /* Các dòng dữ liệu */
    .table-dark tbody tr:nth-child(even) {
        background-color: #2a3b4b; /* Màu nền cho dòng chẵn */
    }

    .table-dark tbody tr:nth-child(odd) {
        background-color: #1f2a38; /* Màu nền cho dòng lẻ */
    }

    .table-dark tbody tr:hover {
        background-color: #354a60 !important; /* Màu nền khi hover */
        cursor: pointer;
        transition: background-color 0.3s ease; /* Hiệu ứng chuyển màu mượt mà khi hover */
    }

    /* Liên kết hành động */
    .action-link {
        color: #fff; /* Màu chữ trắng */
        text-decoration: none;
        font-weight: bold;
        padding: 5px 10px;
        border-radius: 3px;
        transition: all 0.2s ease;
    }

        .action-link:hover {
            background-color: #ff6f61; /* Màu nền khi hover */
            color: white;
            text-decoration: none;
        }
</style>



<script>
    document.addEventListener("DOMContentLoaded", function () {
        // Lắng nghe sự kiện click vào các nút có class "btn-confirm"
        document.querySelectorAll(".btn-confirm").forEach(button => {
            button.addEventListener("click", function (event) {
                const reportId = event.target.getAttribute("data-id");

                // Hiển thị SweetAlert2 xác nhận hành động
                Swal.fire({
                    title: 'Bạn có chắc chắn?',
                    text: "Bạn có muốn xác nhận báo cáo này không?",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Xác nhận',
                    cancelButtonText: 'Hủy'
                }).then((result) => {
                    if (result.isConfirmed) {
                        // Nếu người dùng xác nhận, gửi yêu cầu xác nhận qua Ajax
                        $.ajax({
                            url: "/Admin/BaoCaoNguoiDungs/XacNhan", // Đường dẫn đến action
                            type: "POST",
                            data: { id: reportId }, // Truyền ID báo cáo
                            success: function (response) {
                                // Xử lý khi xác nhận thành công (nếu có)
                                Swal.fire('Xác nhận thành công!', '', 'success');
                                // Tải lại trang sau khi xác nhận thành công
                                location.reload();
                            },
                            error: function (xhr, status, error) {
                                // Xử lý khi có lỗi
                                Swal.fire('Có lỗi xảy ra!', '', 'error');
                            }
                        });
                    }
                });
            });
        });
    });

</script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<!-- SweetAlert2 Library -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>