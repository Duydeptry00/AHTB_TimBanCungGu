@model AHTB_TimBanCungGu_API.Models.PhanVM

@{
    ViewData["Title"] = "Edit";
}

<h1 class="mb-4">Chỉnh Sửa Phần</h1>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="IDPhan" />

            <div class="form-group">
                <label asp-for="SoPhan" class="control-label">Số phần</label>
                <input asp-for="SoPhan" class="form-control" />
                <span asp-validation-for="SoPhan" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NgayCongChieu" class="control-label">Ngày công chiếu</label>
                <input asp-for="NgayCongChieu" class="form-control" type="date" />
                <span asp-validation-for="NgayCongChieu" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SoLuongTap" class="control-label">Số lượng tập</label>
                <input asp-for="SoLuongTap" class="form-control" />
                <span asp-validation-for="SoLuongTap" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PhimID" class="control-label">Phim</label>
                <select asp-for="PhimID" class="form-control" asp-items="ViewBag.PhimID"></select>
                <span asp-validation-for="PhimID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-danger" />  <!-- Đổi màu nút thành đỏ -->
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-dark">Quay lại danh sách</a>  <!-- Nút quay lại màu đen -->
</div>

