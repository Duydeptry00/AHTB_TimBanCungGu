@model IEnumerable<AHTB_TimBanCungGu_API.Models.Phan>

@{
    ViewData["Title"] = "Quản lý Phân";
    Layout = "~/Areas/Admin/Views/SharedAdmin/_LayoutAdmin.cshtml";
}

<div class="background-dark">
    <div class="table-responsive">
        <table class="table table-striped table-dark table-bordered">
            <thead>
                <tr>
                    <th class="table-header"><i class="fas fa-cogs"></i> Số Phân</th>
                    <th class="table-header"><i class="fas fa-calendar-alt"></i> Ngày Công Chiếu</th>
                    <th class="table-header"><i class="fas fa-list-ul"></i> Số Lượng Tập</th>
                    <th class="table-header"><i class="fas fa-film"></i> Phim</th>
                    <th class="table-header"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.SoPhan)</td>
                        <td>@Html.DisplayFor(modelItem => item.NgayCongChieu)</td>
                        <td>@Html.DisplayFor(modelItem => item.SoLuongTap)</td>
                        <td>@Html.DisplayFor(modelItem => item.Phim.IDPhim)</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.IDPhan" class="action-link">Sửa</a> |
                            <a asp-action="Details" asp-route-id="@item.IDPhan" class="action-link">Chi tiết</a> |
                            <a asp-action="Delete" asp-route-id="@item.IDPhan" class="action-link">Xóa</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    /* Nền đen cho toàn bộ vùng chứa */
    .background-dark {
        background-color: #0d1b2a;
        padding: 20px;
        margin: 15px;
        border-radius: 5px;
    }

    /* Tiêu đề trang */
    h1 {
        color: #fff;
        font-size: 2rem;
        margin-bottom: 20px;
    }

    /* Bảng */
    .table-dark {
        background-color: #1f1f1f;
        border-color: #333;
        color: #fff;
        border-collapse: collapse;
    }

    /* Tiêu đề bảng nổi bật với icon và viền dưới */
    .table-header {
        background-color: #333;
        color: #ff5252;
        font-weight: bold;
        font-size: 1.1rem;
        text-align: center;
        padding: 10px;
        border-right: 2px solid #ff5252; /* Viền phải giữa các tiêu đề */
        border-bottom: 2px solid #ff5252; /* Viền dưới giữa tiêu đề và dữ liệu */
    }

        .table-header:last-child {
            border-right: none; /* Bỏ viền phải của tiêu đề cuối cùng */
        }

        .table-header i {
            margin-right: 8px;
        }

    /* Dữ liệu trong bảng */
    .table-dark td {
        padding: 10px;
        text-align: center;
        border-right: 2px solid #333;
        border-bottom: 2px solid #333;
    }

        .table-dark td:last-child {
            border-right: none;
        }

    /* Các dòng dữ liệu */
    .table-dark tbody tr:nth-child(even) {
        background-color: #262626;
    }

    .table-dark tbody tr:nth-child(odd) {
        background-color: #1f1f1f;
    }

    .table-dark tbody tr:hover {
        background-color: #444 !important;
        cursor: pointer;
    }

    /* Link hành động */
    .action-link {
        color: #ff5252;
        text-decoration: none;
        font-weight: bold;
        padding: 5px 10px;
        border-radius: 3px;
        transition: all 0.2s ease;
    }

        .action-link:hover {
            background-color: #b71c1c;
            color: white;
            text-decoration: none;
        }
</style>
