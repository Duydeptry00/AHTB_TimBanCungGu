@model IEnumerable<AHTB_TimBanCungGu_API.Models.Phan>

@{
    ViewData["Title"] = "Quản lý Phần Phim";
    Layout = "~/Areas/Admin/Views/SharedAdmin/_LayoutAdmin.cshtml";
}

<div class="container">
    <div class="dark-background">
        <h1 class="text-center text-light">Quản lý Phần Phim</h1>

        <div class="col text-end mb-3">
            <a asp-action="Create" class="btn btn-success" id="addNewBtn">
                <i class="fas fa-plus"></i> Thêm Mới
            </a>
        </div>

        <div class="table-wrapper">
            <table class="table table-striped table-hover table-bordered text-center align-middle table-dark text-light" id="movieTable">
                <thead>
                    <tr class="table-secondary">
                        <th><i class="fas fa-cogs"></i>Phần</th>
                        <th><i class="fas fa-calendar-alt"></i> Ngày Công Chiếu</th>
                        <th><i class="fas fa-list-ul"></i> Số Lượng Tập</th>
                        <th><i class="fas fa-cogs"></i> Thao Tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var phimGroup in Model.GroupBy(p => p.PhimID)) // Nhóm theo PhimID
                    {
                        <!-- Hiển thị tên phim ở trên cùng của nhóm -->
                        <tr class="bg-info text-white">
                            <td colspan="5" class="text-start fs-4"><strong>@phimGroup.First().Phim.TenPhim</strong></td>
                        </tr>
                        <!-- Hiển thị các phần của bộ phim -->
                        @foreach (var phan in phimGroup)
                        {
                            <tr class="table-light">
                                <td>@phan.SoPhan</td>
                                <td>@phan.NgayCongChieu.ToString("dd/MM/yyyy")</td>
                                <td>@phan.SoLuongTap</td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@phan.IDPhan" class="btn btn-primary btn-sm">
                                        <i class="fas fa-edit"></i> Chỉnh Sửa
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
