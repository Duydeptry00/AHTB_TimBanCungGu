@model AHTB_TimBanCungGu_API.Models.Phan

<style>
    .modal-sm {
        max-width: 600px; /* Chiều rộng cụ thể */
    }

    .modal-content {
        padding: 20px;
        border-radius: 8px; /* Góc bo tròn */
    }

    .modal-footer {
        display: flex;
        justify-content: flex-end; /* Đảm bảo các nút được căn chỉnh về phía bên phải */
        gap: 10px; /* Thêm khoảng cách giữa các nút */
    }

    .form-group {
        margin-bottom: 1rem; /* Giữ khoảng cách hợp lý giữa các trường */
    }

    .input-group {
        display: flex;
        align-items: center; /* Căn chỉnh các phần tử theo chiều ngang */
    }

        .input-group input {
            flex: 1; /* Chiều rộng của input chiếm hết phần còn lại */
        }

        .input-group .btn {
            margin-left: 10px; /* Khoảng cách giữa input và nút */
        }
</style>

<div class="modal-dialog modal-dialog-centered modal-sm">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="editModalLabel">Thêm Phần Phim Mới</h5>
            <button type="button" class="btn-close" onclick="window.location.href='@Url.Action("Index", "Phans")'" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <form asp-action="Create" method="post" id="createForm">
              <div class="form-group mb-3">
                    <label asp-for="SoPhan" class="form-label">Số Phần</label>
                    <input asp-for="SoPhan" class="form-control" required min="1" />
                    <span asp-validation-for="SoPhan" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="NgayCongChieu" class="form-label">Ngày Công Chiếu</label>
                    <input asp-for="NgayCongChieu" type="date" class="form-control" required
                           min="@DateTime.Now.ToString("yyyy-MM-dd")" />
                    <span asp-validation-for="NgayCongChieu" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="SoLuongTap" class="form-label">Số Lượng Tập</label>
                    <div class="input-group">
                        <!-- Input readonly để hiển thị số lượng tập -->
                        <input asp-for="SoLuongTap" class="form-control" required min="1" type="number" />

                        <!-- Nút thêm tập -->
                        <button type="button" id="btnAddEpisode" class="btn btn-success">
                            +1 Tập
                        </button>
                    </div>
                    @if (ViewData.ModelState["SoLuongTap"]?.Errors.Count > 0)
                    {
                        <span class="text-danger">Vui lòng nhập số lượng tập .</span>
                    }
                </div>
                <div class="form-group mb-3">
                    <label asp-for="PhimID" class="form-label">Chọn Phim</label>
                    @Html.DropDownList("PhimID", null, "Chọn Phim Bộ", new { @class = "form-control" })
                    <span asp-validation-for="PhimID" class="text-danger"></span>
                </div>

                <div class="modal-footer">
                    <a href="@Url.Action("Index", "Phans")" class="btn btn-secondary">Hủy</a>
                    <button type="submit" class="btn btn-primary" id="btnSave">Lưu</button>
                </div>
            </form>
        </div>
    </div>
</div>
<script>
    // Lấy ngày hiện tại tương đương DateTime.Now
    var currentDate = new Date();

    // Định dạng thành yyyy-MM-dd
    var year = currentDate.getFullYear();
    var month = ("0" + (currentDate.getMonth() + 1)).slice(-2); // Tháng bắt đầu từ 0
    var day = ("0" + currentDate.getDate()).slice(-2); // Ngày đảm bảo 2 chữ số

    var formattedDate = `${year}-${month}-${day}`;

    // Đặt giá trị min cho input NgayPhatHanh
    document.getElementById('NgayCongChieu').setAttribute('min', formattedDate);


    document.getElementById("btnAddEpisode").addEventListener("click", function () {
        // Tăng giá trị trường SoLuongTap thêm 1
        const input = document.querySelector("input[name='SoLuongTap']");
        const currentValue = parseInt(input.value) || 0;
        input.value = currentValue + 1;
    });

    // Đảm bảo form chỉ được gửi khi nhấn nút "Lưu"
    document.getElementById("createForm").onsubmit = function (event) {
        event.preventDefault(); // Ngăn chặn hành động mặc định của form
        this.submit(); // Gửi form khi nhấn nút "Lưu"
    };
</script>
