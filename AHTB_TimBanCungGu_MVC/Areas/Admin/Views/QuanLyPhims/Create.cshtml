@model AHTB_TimBanCungGu_API.Models.Phim

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/SharedAdmin/_LayoutAdmin.cshtml";
}

<h1>Create</h1>

<h4>Phim</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IDPhim" class="control-label"></label>
                <input asp-for="IDPhim" class="form-control" />
                <span asp-validation-for="IDPhim" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TenPhim" class="control-label"></label>
                <input asp-for="TenPhim" class="form-control" />
                <span asp-validation-for="TenPhim" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MoTa" class="control-label"></label>
                <input asp-for="MoTa" class="form-control" />
                <span asp-validation-for="MoTa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DienVien" class="control-label"></label>
                <input asp-for="DienVien" class="form-control" />
                <span asp-validation-for="DienVien" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TheLoaiPhim" class="control-label"></label>
                <select asp-for="TheLoaiPhim" class ="form-control" asp-items="ViewBag.TheLoaiPhim"></select>
            </div>
            <div class="form-group">
                <label asp-for="NgayPhatHanh" class="control-label"></label>
                <input asp-for="NgayPhatHanh" class="form-control" />
                <span asp-validation-for="NgayPhatHanh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DanhGia" class="control-label"></label>
                <input asp-for="DanhGia" class="form-control" />
                <span asp-validation-for="DanhGia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TrailerURL" class="control-label"></label>
                <input asp-for="TrailerURL" class="form-control" />
                <span asp-validation-for="TrailerURL" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="NoiDungPremium" /> @Html.DisplayNameFor(model => model.NoiDungPremium)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="SourcePhim" class="control-label"></label>
                <input asp-for="SourcePhim" class="form-control" />
                <span asp-validation-for="SourcePhim" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HinhAnh" class="control-label"></label>
                <input asp-for="HinhAnh" class="form-control" type="file" name="ImageFile" onchange="previewImage(event)" />
                <img id="imagePreview" src="#" alt="Image preview" style="display:none; max-width: 100%; margin-top: 10px;" />
                <span asp-validation-for="HinhAnh" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DangPhim" class="control-label"></label>
                <select asp-for="DangPhim" class="form-control" id="DangPhimSelect" onchange="toggleFields()">
                    <option value="">-- Chọn Dạng Phim --</option>
                    <option value="Phim Bộ">Phim Bộ</option>
                    <option value="Phim Lẻ">Phim Lẻ</option>
                </select>
                <span asp-validation-for="DangPhim" class="text-danger"></span>
            </div>
            <div class="form-group" id="SoLuongTapGroup">
                <label for="SoLuongTap" class="control-label">Số Lượng Tập</label>
                <input type="number" name="soluongtap" class="form-control" id="SoLuongTapInput" />
                <span class="text-danger" data-valmsg-for="soluongtap"></span>
            </div>
            <div class="form-group">
                <label asp-for="NgayCapNhat" class="control-label"></label>
                <input asp-for="NgayCapNhat" class="form-control" />
                <span asp-validation-for="NgayCapNhat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IDAdmin" class="control-label"></label>
                <select asp-for="IDAdmin" class ="form-control" asp-items="ViewBag.IDAdmin"></select>
            </div>
            <div class="form-group">
                <label asp-for="TrangThai" class="control-label"></label>
                <input asp-for="TrangThai" class="form-control" />
                <span asp-validation-for="TrangThai" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

<script>
    function previewImage(event) {
        const imagePreview = document.getElementById('imagePreview');
        const file = event.target.files[0];
        const reader = new FileReader();
        reader.onload = function () {
            imagePreview.src = reader.result;
            imagePreview.style.display = 'block';
        }
        if (file) {
            reader.readAsDataURL(file);
        } else {
            imagePreview.src = '#';
            imagePreview.style.display = 'none';
        }
    }
    function toggleFields() {
        var dangPhim = document.getElementById("DangPhimSelect").value;
        var soLuongTapGroup = document.getElementById("SoLuongTapGroup");

        if (dangPhim === "Phim Bộ") {
            soLuongTapGroup.style.display = "block";
        } else {
            soLuongTapGroup.style.display = "none";
            document.getElementById("SoLuongTapInput").value = "";
        }
    }

    document.addEventListener("DOMContentLoaded", function () {
        toggleFields();
    });
</script>