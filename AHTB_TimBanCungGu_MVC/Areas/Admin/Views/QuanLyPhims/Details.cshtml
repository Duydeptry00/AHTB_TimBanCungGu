@model AHTB_TimBanCungGu_API.Models.Phim

@{
    ViewData["Title"] = "Chi Tiết Phim";
    Layout = "~/Areas/Admin/Views/SharedAdmin/_LayoutAdmin.cshtml";
}

<style>
    .card-body {
        background-color: #1a1a1a; /* Màu nền đen cho body của card */
        color: #f8f9fa; /* Màu chữ sáng (trắng) để nổi bật trên nền đen */
        border-radius: 8px; /* Thêm bo góc cho card */
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Bóng đổ nhẹ cho card */
        padding: 20px;
    }

    .card-title {
        font-size: 1.5rem; /* Kích thước chữ tiêu đề lớn hơn */
        font-weight: bold;
        color: #ffd700; /* Màu vàng cho tiêu đề để làm nổi bật */
    }

    .card-text {
        font-size: 1.1rem; /* Kích thước chữ cho các phần tử thông tin */
        line-height: 1.6; /* Tăng khoảng cách dòng để dễ đọc */
    }

        .card-text strong {
            color: #00bfff; /* Màu xanh dương cho các nhãn (Diễn viên, Thể loại, etc.) */
        }

        .card-text p {
            margin-bottom: 15px;
        }

        .card-text .rating {
            font-size: 1.2rem;
            font-weight: bold;
            color: #ff4500; /* Màu cam cho đánh giá */
        }

        .card-text .release-date {
            font-style: italic;
            color: #90ee90; /* Màu xanh nhạt cho ngày phát hành */
        }

</style>
<div class="container">
    <!-- Card Flip Animation -->
    <div class="row justify-content-center">
        <div class="col-md-8" style="margin-bottom: 40px">
            <div class="card-deck">
                <div class="card shadow-lg border-light rounded-3">
                    <div class="card-body">
                        <h5 class="card-title">@Html.DisplayFor(model => model.TenPhim)</h5>
                        <p class="card-text"><strong>Diễn viên:</strong> @Html.DisplayFor(model => model.DienVien)</p>
                        <p class="card-text"><strong>Thể loại:</strong> @Html.DisplayFor(model => model.TheLoai.TenTheLoai)</p>
                        <p class="card-text release-date"><strong>Ngày phát hành:</strong> @Model.NgayPhatHanh.ToString("dd/MM/yyyy")</p>
                        <p class="card-text rating"><strong>Đánh giá:</strong> @Html.DisplayFor(model => model.DanhGia)/10</p>
                    </div>

                <div class="card shadow-lg border-light rounded-3">
                    <!-- Hình ảnh -->
                    @if (!string.IsNullOrEmpty(Model.HinhAnh))
                    {
                        <img src="@Url.Content("~/Uploads/" + Model.HinhAnh)" class="card-img-top" alt="Hình Ảnh Phim" style="height: auto; object-fit: contain;">
                    }
                    else
                    {
                        <div class="card-img-top d-flex justify-content-center align-items-center" style="height: 300px; background-color: #f1f1f1;">
                            <p class="text-muted">Không có hình ảnh</p>
                        </div>
                    }

                </div>
            </div>

            <!-- Các nút điều hướng -->
            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Edit" asp-route-id="@Model.IDPhim" class="btn btn-warning"><i class="bi bi-pencil-square"></i> Chỉnh Sửa</a>
                <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left-circle"></i> Quay Lại Danh Sách</a>
            </div>
        </div>
    </div>
</div>

<!-- Thêm thư viện Bootstrap Icons -->
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
</head>
