@model AHTB_TimBanCungGu_API.Models.Phim

@{
    ViewData["Title"] = "Chi Tiết Phim";
    Layout = "~/Areas/Admin/Views/SharedAdmin/_LayoutAdmin.cshtml";
}

<style>
    .card-body {
        background-color: #1a1a1a; /* Màu nền đen cho body của card */
        color: #f8f9fa; /* Màu chữ sáng (trắng) để nổi bật trên nền đen */
        border-radius: 8px; /* Thêm bo góc cho card */
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Bóng đổ nhẹ cho card */
        padding: 20px;
    }

    .card-title {
        font-size: 1.5rem; /* Kích thước chữ tiêu đề lớn hơn */
        font-weight: bold;
        color: #ffd700; /* Màu vàng cho tiêu đề để làm nổi bật */
    }

    .card-text {
        font-size: 1.1rem; /* Kích thước chữ cho các phần tử thông tin */
        line-height: 1.6; /* Tăng khoảng cách dòng để dễ đọc */
    }

        .card-text strong {
            color: #00bfff; /* Màu xanh dương cho các nhãn (Diễn viên, Thể loại, etc.) */
        }

        .card-text p {
            margin-bottom: 15px;
        }

        .card-text .rating {
            font-size: 1.2rem;
            font-weight: bold;
            color: #ff4500; /* Màu cam cho đánh giá */
        }

        .card-text .release-date {
            font-style: italic;
            color: #90ee90; /* Màu xanh nhạt cho ngày phát hành */
        }

</style>
<div class="container">
    <!-- Card Flip Animation -->
    <div class="row justify-content-center">
        <div class="col-md-8" style="margin-bottom: 40px; margin-top: 50px">
            <div class="card-deck">
                <div class="card shadow-lg border-light rounded-3">
                    <div class="card-body">
                        <h5>Phim được thêm bởi: <h5 style="color: red">@ViewData["IDAdmin"]</h5> </h5>
                    </div>
            </div>
            <!-- Các nút điều hướng -->
            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left-circle"></i> Quay Lại Danh Sách</a>
            </div>
        </div>
    </div>
</div>
</div>

